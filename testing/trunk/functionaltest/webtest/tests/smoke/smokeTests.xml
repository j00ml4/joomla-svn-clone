<?xml version="1.0"?>

<project name="smokeTests" default="test">
	<target name="test">
		<webtest name="Smoke Tests - Administration Page">

	  		<invoke url="${url}" description="Joomla! Administration Test"/>
	
	  		<setInputField name="username" value="${username}" />
	  		<setInputField name="passwd" value="${passwd}" />
	  		<clickButton label="Login" />
	  		
	  		<verifyTitle regex="true" text=".*Administration" />
	
			<dataDriven tableContainer="smoke/smokeTestsData.xls">
				<group description="${Menu} > ${MenuItem}">
					<clickLink label="${MenuItem}" />
					<verifyText text="${PageTitle}" />
				</group>
			</dataDriven>
			
		</webtest>		
	</target>
</project>
