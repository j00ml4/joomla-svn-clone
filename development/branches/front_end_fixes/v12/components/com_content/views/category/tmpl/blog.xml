<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout
		title="com_content_category_view_blog_title">
		<message>
			<![CDATA[com_content_category_view_blog_desc]]>
		</message>
	</layout>

	<fields
		group="request"
		array="true"
		label="Menus_Layout_Request_Variables_Label"
		description="Menus_Layout_Request_Variables_Desc">
		<field
			name="id"
			type="category"
			extension="com_content"
			required="true"
			label="CHOOSE_CATEGORY_LABEL"
			description="CHOOSE_CATEGORY_DESC" />
	</fields>

	<fields
		group="basic"
		label="Menus_Layout_Basic_Options_Label"
		description="">

		<field
			name="show_description"
			type="radio"
			default="0"
			label="Description"
			description="Show/Hide the Category Description">
			<option
				value="0">JCommon_Hide</option>
			<option
				value="1">JCommon_Show</option>
		</field>

		<field
			name="show_description_image"
			type="list"
			default=""
			label="Description Image"
			description="Show/Hide the Category Description">
			<option
				value="">JCOMMON_USE_GLOBAL</option>
			<option
				value="0">JCommon_Hide</option>
			<option
				value="1">JCommon_Show</option>
		</field>

		<field
			name="show_subcategory_content"
			type="list"
			default=""
			label="Show Subcategory Content"
			description="">
			<option
				value="">JCOMMON_USE_GLOBAL</option>
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>

		<field
			name="spacer1"
			type="spacer"
			hr="true"
			/>
		<field
			name="num_leading_articles"
			type="text"
			size="3"
			default="1"
			label="Content_Attribs_Num_Leading_Articles_Label"
			description="Content_Attribs_Num_Leading_Articles_Desc" />

		<field
			name="num_intro_articles"
			type="text"
			size="3"
			default="4"
			label="CONTENT_ATTRIBS_NUM_INTRO_ARTICLES_LABEL"
			description="CONTENT_ATTRIBS_NUM_INTRO_ARTICLES_DESC" />

		<field
			name="num_columns"
			type="text"
			size="3"
			default="2"
			label="CONTENT_ATTRIBS_NUM_COLUMNS_LABEL"
			description="CONTENT_ATTRIBS_NUM_COLUMNS_DESC" />

		<field
			name="num_links"
			type="text"
			size="3"
			default="4"
			label="CONTENT_ATTRIBS_NUM_LINKS_LABEL"
			description="CONTENT_ATTRIBS_NUM_LINKS_DESC" />
	</fields>

	<fields
		group="advanced"
		label="Menus_Layout_Advanced_Options_Label"
		description="">

		<field
			name="orderby_pri"
			type="list"
			default=""
			label="Category Order"
			description="Order items by category">
			<option
				value="">No_Order</option>
			<option
				value="alpha">Title_Alphabetical</option>
			<option
				value="ralpha">Title_Reverse_Alphabetical</option>
			<option
				value="order">Ordering</option>
		</field>

		<field
			name="orderby_sec"
			type="list"
			default=""
			label="Primary Order"
			description="Order that the items will be displayed in.">
			<option
				value="">Default</option>
			<option
				value="date">Oldest_first</option>
			<option
				value="rdate">Most_recent_first</option>
			<option
				value="alpha">Title_Alphabetical</option>
			<option
				value="ralpha">Title_Reverse_Alphabetical</option>
			<option
				value="author">Author_Alphabetical</option>
			<option
				value="rauthor">Author_Reverse_Alphabetical</option>
			<option
				value="hits">Most_Hits</option>
			<option
				value="rhits">Least_Hits</option>
			<option
				value="order">Ordering</option>
		</field>

		<field
			name="spacer2"
			type="spacer"
			hr="true"
			/>

		<field
			name="show_pagination"
			type="list"
			default=""
			label="Pagination"
			description="Show/Hide Pagination support">
			<option
				value="">JCOMMON_USE_GLOBAL</option>
			<option
				value="0">JCommon_Hide</option>
			<option
				value="1">JCommon_Show</option>
			<option
				value="2">JCommon_Auto</option>
		</field>

		<field
			name="show_pagination_results"
			type="list"
			default=""
			label="Pagination Results"
			description="fieldPAGINATIONRESULTS">
			<option
				value="">JCOMMON_USE_GLOBAL</option>
			<option
				value="0">JCommon_Hide</option>
			<option
				value="1">JCommon_Show</option>
		</field>

		<field
			name="show_feed_link"
			type="list"
			default=""
			label="Show a feed link"
			description="fieldSHOWFEEDLINK">
			<option
				value="">JCOMMON_USE_GLOBAL</option>
			<option
				value="0">JCommon_Hide</option>
			<option
				value="1">JCommon_Show</option>
		</field>
	</fields>
</metadata>