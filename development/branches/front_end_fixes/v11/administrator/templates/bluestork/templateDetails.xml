	<author>Ron Severdia</author>
	<authorEmail>contact@kontentdesign.com</authorEmail>
	<authorUrl>http://www.kontentdesign.com</authorUrl>
	<copyright>2009 - 2010</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>0.6</version>
	<description>TEMPLATE_BLUESTORK_DESC</description>
	<files>
		<filename>index.php</filename>
		<filename>login.php</filename>
		<filename>component.php</filename>
		<filename>cpanel.php</filename>
		<filename>fields.ini</filename>
		<filename>favicon.ico</filename>
		<filename>index.html</filename>
		<filename>template_thumbnail.png</filename>
		<folder>images</folder>
		<folder>js</folder>
		<folder>css</folder>
		<folder>html</folder>
	</files>
	<positions>
		<position>menu</position>
		<position>submenu</position>
		<position>toolbar</position>
		<position>title</position>
		<position>status</position>
		<position>icon</position>
		<position>cp_shell</position>
		<position>cpanel</position>
		<position>footer</position>
		<position>debug</position>
	</positions>
	<fields>
		<field
			name="useRoundedCorners"
			type="list"
			default="1"
			label="TEMPLATE_BLUESTORK_ROUNDED_LABEL"
			description="TEMPLATE_BLUESTORK_ROUNDED_DESC">
			<option
				value="0">JDISABLED</option>
			<option
				value="1">JENABLED</option>
		</field>
		<field
			name="showSiteName"
			type="list"
			default="0"
			label="TEMPLATE_BLUESTORK_SHOW_SITE_NAME_LABEL"
			description="TEMPLATE_BLUESTORK_SHOW_SITE_NAME_DESC">
			<option
				value="0">JDISABLED</option>
			<option
				value="1">JENABLED</option>
		</field>

		<field
			name="textBig"
			type="list"
			default="0"
			label="TEMPLATE_BLUESTORK_BIGGER_TEXT_LABEL"
			description="TEMPLATE_BLUESTORK_BIGGER_TEXT_DESC">
			<option
				value="0">JDISABLED</option>
			<option
				value="1">JENABLED</option>
		</field>

		<field
			name="highContrast"
			type="list"
			default="0"
			label="TEMPLATE_BLUESTORK_HIGH CONTRAST_LABEL"
			description="TEMPLATE_BLUESTORK_HIGH_CONTRAST_DESC">
			<option
				value="0">JDISABLED</option>
			<option
				value="1">JENABLED</option>
		</field>

