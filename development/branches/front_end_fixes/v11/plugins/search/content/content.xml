<?xml version="1.0" encoding="utf-8"?>
<install
	version="1.6"
	type="plugin"
	group="search">
	<name>Search - Content</name>
	<author>Joomla! Project</author>
	<creationDate>November 2005</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.5</version>
	<description>ALLOWS SEARCHING OF ALL ARTICLES</description>
	<files>
		<filename
			plugin="content">content.php</filename>
	</files>
	<fields>
		<field
			name="search_limit"
			type="text"
			size="5"
			default="50"
			label="Search Limit"
			description="Number of Search items to return" />
		<field
			type="spacer" />
		<field
			name="search_content"
			type="radio"
			default="1"
			label="Content Items"
			description="Search Content Items?">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>
		<field
			name="search_uncategorised"
			type="radio"
			default="1"
			label="Uncategorised Content"
			description="Search Uncategorised Content?">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>
		<field
			name="search_archived"
			type="radio"
			default="1"
			label="Archived Content"
			description="Search Archived Content?">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>
	</fields>
</install>