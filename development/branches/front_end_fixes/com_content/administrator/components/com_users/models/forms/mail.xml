<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fieldset>

		<field name="recurse" type="checkbox"
			description="Users_Mail_Recurse_Desc"
			label="Users_Mail_Recurse"
			value="1"
		/>

		<field name="mode" type="checkbox"
			description="Users_Mail_Send_In_HTML_Mode_Desc"
			label="Users_Mail_Send_In_HTML_Mode"
			value="1"
		/>

		<field name="group" type="usergroup"
			default="0"
			description="Users_Mail_Group_Desc"
			label="Users_Mail_Group"
			size="10"
		>
			<option value="0">Users_Mail_All_Users_Groups</option>
		</field>

		<field name="bcc" type="checkbox"
			default="1"
			description="Users_Mail_Send_as_Blind_Carbon_Copy"
			label="Users_Mail_Recipients_as_BCC"
			value="1"
		/>

		<field name="subject" type="text"
			class="inputbox"
			description="Users_Mail_Subject_Desc"
			label="Users_Mail_Subject"
			maxlength="150"
			size="30"
		/>

		<field name="message" type="textarea"
			class="inputbox"
			cols="70"
			description="Users_Mail_Message_Desc"
			label="Users_Mail_Message"
			rows="20"
		/>
	</fieldset>
</form>
