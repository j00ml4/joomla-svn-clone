<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fields>
		<field
			name="name"
			type="text"
			id="name"
			size="30"
			default=""
			required="true"
			class="inputbox required"
			label="Members_Member_Name"
			description="Members_Member_Name"/>
		<field
			name="username"
			type="text"
			id="username"
			size="30"
			default=""
			required="true"
			class="inputbox required"
			label="Members_Member_UserName"
			description="Members_Member_UserName_Desc"/>
		<field
			name="password"
			type="password"
			id="password"
			size="30"
			default=""
			filter="raw"
			class="inputbox"
			label="Members_Member_Password"
			description="Members_Member_Password_Desc"
			autocomplete="off"/>
		<field
			name="password2"
			type="password"
			id="password2"
			size="30"
			default=""
			filter="raw"
			class="inputbox"
			label="Members_Member_Password2"
			description="Members_Member_Password2_Desc"
			autocomplete="off"/>
		<field
			name="email"
			type="text"
			id="email"
			size="30"
			default=""
			required="true"
			validate="email"
			class="inputbox required validate-email"
			label="Members_Member_Email"
			description="Members_Member_Email_Desc"/>
		<field
			name="gid"
			type="text"
			id="gid"
			default="18"
			class="inputbox readonly"
			label="Members_Member_GID"
			description="Members_Member_GID_Desc"
			readonly="true"/>
	</fields>

	<fields
		group="params"
		array="true"
		label="User_Profile">

		<field
			name="admin_language"
			type="languages"
			client="administrator"
			default=""
			label="Members_Option_Backend_Language"
			description="Members_Option_Backend_Language_Desc">
			<option
				value="">JOption_Use_Default</option>
		</field>
		<field
			name="language"
			type="languages"
			client="site"
			default=""
			label="Members_Option_Frontend_Language"
			description="Members_Option_Frontend_Language_Desc">
			<option
				value="">JOption_Use_Default</option>
		</field>
		<field
			name="editor"
			type="editors"
			default=""
			label="Members_Option_Editor"
			description="Members_Option_Editor_Desc">
			<option
				value="">JOption_Use_Default</option>
		</field>
		<field
			name="helpsite"
			type="helpsites"
			default=""
			label="Members_Option_Helpsite"
			description="Members_Option_Helpsite_Desc">
			<option
				value="">JOption_Use_Default</option>
		</field>
		<field
			name="timezone"
			type="timezones"
			default=""
			label="Members_Option_Timezone"
			description="Members_Option_Timezone_Desc">
			<option
				value="">JOption_Use_Default</option>
		</field>
	</fields>
</form>