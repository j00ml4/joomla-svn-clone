<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: weblink.xml 11702 2009-03-24 00:54:27Z hackwar $ -->
<form>
	<fields>
		<field
			id="id"
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"
		/>

		<field
			id="title"
			name="title"
			type="text"
			class="inputbox"
			default=""
			size="40"
			label="Categories_Title"
			description="Categories_Title_Desc"
			required="true"
		/>

		<field
			id="alias"
			name="alias"
			type="text"
			class="inputbox"
			default=""
			size="40"
			label="Categories_Alias"
			description="Categories_Alias_Desc"
		/>
		
		<field
			id="published"
			name="published"
			type="radio"
			class="inputbox"
			default="1"
			label="Categories_Published"
			description="Categories_Published_Desc"
		>
			<option value="1">JState_Published</option>
			<option value="0">JState_UnPublished</option>
		</field>

		<field
			id="parent"
			name="parent"
			type="category"
			class="inputbox"
			default=""
			size="8"
			label="Categories_Parent"
			description="Categories_Parent_Desc"
		/>

		<field
			id="access"
			name="access"
			type="accesslevels"
			class="inputbox"
			default=""
			label="Categories_Accesslevel"
			description="Categories_Accesslevel_Desc"
		/>

		<field
			id="description"
			name="description"
			type="editor"
			buttons="readmore,pagebreak"
			class="inputbox"
			default=""
			label="Weblinks_Description"
			description="Weblinks_Description_Desc"
		/>

		<field
			id="checked_out"
			name="checked_out"
			type="Text"
			class="inputbox"
			default=""
			size="6"
			label="Weblinks_Checkedout"
			description="Weblinks_Checkedout_Desc"
			readonly="true"
			filter="unset"
		/>

		<field
			id="checked_out_time"
			name="checked_out_time"
			type="Text"
			class="inputbox"
			default=""
			size="6"
			label="Weblinks_Checkedout_Time"
			description="Weblinks_Checkedout_Time_Desc"
			readonly="true"
			filter="unset"
		/>
		
		<field
			id="ordering"
			name="ordering"
			type="Ordering"
			class="inputbox"
			default=""
			label="Weblinks_Ordering"
			description="Weblinks_Ordering_Desc"
		/>

		<field
			id="archived"
			name="archived"
			type="radio"
			class="inputbox"
			default=""
			label="Weblinks_Archived"
			description="Weblinks_Archived_Desc"
		>
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>

		<field
			id="approved"
			name="approved"
			type="radio"
			class="inputbox"
			default=""
			label="Weblinks_Approved"
			description="Weblinks_Approved_Desc"
		>
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>

	</fields>
	
	<fields
				group="params"
				array="true"
				label="Categories_Options">
		
		<field
				id="target"
				name="target"
				type="List"
				default="0"
				label="Weblinks_Target"
				description="Weblinks_Target_Desc">
			<option value="0">JBrowserTarget_Parent</option>
			<option value="1">JBrowserTarget_New</option>
			<option value="2">JBrowserTarget_Popup</option>
			<option value="3">JBrowserTarget_Modal</option>
		</field>
	</fields>
</form>