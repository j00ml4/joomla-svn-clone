<metadata>
	<layout title="Contacts Category Layout">
		<message>
			<![CDATA[The Contact Category Layout displays a list of the published contacts in a category.]]>
		</message>
	</layout>
	<state>
		<name>Contacts Category Layout</name>
		<description>The Contact Category Layout displays a list of the published contacts in a category.</description>
		<url>
			<param name="catid" type="category" extension="com_contacts" default="0" label="Select Category" description="A contacts category" />
		</url>
		<params>
			<param name="show_title" type="radio" default="0" label="Category Title" description="Show/Hide the Category Title">
	 			<option value="0">Hide</option>
	 			<option value="1">Show</option>
	 		</param>
			 <param name="show_description" type="radio" default="0" label="Description" description="Show/Hide the Category Description">
	 			<option value="0">Hide</option>
	 			<option value="1">Show</option>
	 		</param>
			<param name="show_description_image" type="radio" default="0" label="Description Image" description="Show/Hide the Category Description">
	 			<option value="0">Hide</option>
	 			<option value="1">Show</option>
	 		</param>
	 		<param name="@spacer" type="spacer" default="" label="" description="" />
	 		<param name="link" type="radio" default="0" label="Link to contact" description="Add a link to the contact form">
	 			<option value="0">No</option>
	 			<option value="1">Yes</option>
	 		</param>
		</params>		
		<advanced>
			<param name="orderby" type="list" default="order" label="Category Order" description="Order that the items will be displayed in.">
				<option value="alpha">Title Alphabetical</option>
				<option value="ralpha">Title Reverse-Alphabetical</option>
				<option value="order">Ordering</option>
			</param>
			<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="alphabet" type="radio" default="1" label="Alphabet Filter" description="Show/Hide the Alphabet Filter">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="search" type="radio" default="1" label="Search Box" description="Show/Hide the Search Box">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="show_limit" type="radio" default="1" label="Limit Box" description="Show/Hide the Limit Box">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
		</advanced>
	</state>
</metadata>



