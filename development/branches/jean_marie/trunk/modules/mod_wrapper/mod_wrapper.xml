<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.6.0"
	client="site"
	method="upgrade">
	<name>Wrapper</name>
	<author>Joomla! Project</author>
	<creationDate>October 2004</creationDate>
	<copyright>Copyright (C) 2005 - 2009 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.6.0</version>
	<description>DESCWRAPPER</description>
	<files>
		<filename
			module="mod_wrapper">mod_wrapper.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.php</filename>
		<filename>mod_wrapper.xml</filename>
	</files>
	<languages>
		<language
			tag="en-GB">en-GB.mod_wrapper.ini</language>
	</languages>
	<fields>
		<field
			name="url"
			type="text"
			size="30"
			default=""
			label="Url"
			description="URL TO SITE/FILE YOU WISH TO DISPLAY WITHIN THE IFRAME" />
		<field
			type="spacer" />
		<field
			name="scrolling"
			type="radio"
			default="auto"
			label="Scroll Bars"
			description="SHOW/HIDE HORIZONTAL AND VERTICAL SCROLL BARS.">
			<option
				value="no">JNo</option>
			<option
				value="yes">JYes</option>
			<option
				value="auto">Auto</option>
		</field>
		<field
			name="width"
			type="text"
			size="5"
			default="100%"
			label="Width"
			description="fieldWIDTH" />
		<field
			name="height"
			type="text"
			size="5"
			default="200"
			label="Height"
			description="HEIGHT OF THE IFRAME WINDOW" />
		<field
			name="height_auto"
			type="radio"
			default="1"
			label="Auto Height"
			description="fieldAUTOHEIGHT">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>
		<field
			type="spacer" />
		<field
			name="add"
			type="radio"
			default="1"
			label="Auto Add"
			description="fieldAUTOADD">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>
		<field
			name="target"
			type="text"
			size="30"
			default=""
			label="Target Name"
			description="Name of the IFrame when used as Target" />
	</fields>
	<fields
		group="advanced">
		<field
			name="layout"
			type="modulelayout"
			label="JField_Alt_Layout_Label"
			description="JField_Alt_Module_Layout_Desc" />
		<field
			name="moduleclass_sfx"
			type="text"
			default=""
			label="Module_Field_Moduleclass_sfx_Label"
			description="Module_Field_Moduleclass_sfx_Desc" />
		<field
			name="cache"
			type="list"
			default="1"
			label="Module_Field_Caching_Label"
			description="Module_Field_Caching_Desc">
			<option
				value="1">USE_GLOBAL</option>
			<option
				value="0">No caching</option>
		</field>
		<field
			name="cache_time"
			type="text"
			default="900"
			label="Cache Time"
			description="The time before the module is recached" />
	</fields>
</extension>
