<?xml version="1.0" encoding="utf-8"?>
<install
	version="1.6"
	type="plugin"
	group="system">
	<name>System - Debug</name>
	<author>Joomla! Project</author>
	<creationDate>December 2006</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.
	</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.5</version>
	<description>Plg_System_Debug_Desc</description>
	<files>
		<filename
			plugin="debug">debug.php</filename>
	</files>
	<fields>
		<field
			name="filter_groups"
			type="usergroup"
			multiple="true"
			size="10"
			label="Debug_field_Allowed_groups_Label"
			description="Debug_field_Allowed_groups_Desc" />

		<field
			name="profile"
			type="radio"
			default="1"
			label="Debug_field_Profiling_Label"
			description="Debug_field_Profiling_Desc">
			<option
				value="1">JYes</option>
			<option
				value="0">JNo</option>
		</field>

		<field
			name="queries"
			type="radio"
			default="1"
			label="Debug_field_Queries_Label"
			description="Debug_field_Queries_Desc">
			<option
				value="1">JYes</option>
			<option
				value="0">JNo</option>
		</field>

		<field
			name="memory"
			type="radio"
			default="1"
			label="Debug_field_Memory_Label"
			description="Debug_field_Memory_Desc">
			<option
				value="1">JYes</option>
			<option
				value="0">JNo</option>
		</field>

	</fields>

	<fields
		group="language">

		<field
			name="language_files"
			type="radio"
			default="1"
			label="Debug_field_Language_files_Label"
			description="Debug_field_Language_files_Desc">
			<option
				value="1">JYes</option>
			<option
				value="0">JNo</option>
		</field>
		<field
			name="language_strings"
			type="radio"
			default="1"
			label="Debug_field_Language_string_Label"
			description="Debug_field_Language_string_Desc">
			<option
				value="1">JYes</option>
			<option
				value="0">JNo</option>
		</field>

		<field
			name="strip-first"
			type="radio"
			default="1"
			label="Debug_field_Strip_First_Label"
			description="Debug_field_Strip_First_Desc">
			<option
				value="1">JYes</option>
			<option
				value="0">JNo</option>
		</field>

		<field
			name="strip-prefix"
			type="textarea"
			label="Debug_field_Strip_Prefix_Label"
			description="Debug_field_Strip_Prefix_Desc"
			rows="4"
			cols="30" />

		<field
			name="strip-suffix"
			type="textarea"
			label="Debug_field_Strip_Suffix_Label"
			description="Debug_field_Strip_Suffix_Desc"
			default=""
			rows="4"
			cols="30" />
	</fields>
</install>