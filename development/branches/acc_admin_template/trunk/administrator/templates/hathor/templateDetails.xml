<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<install type="template" version="1.6" client="administrator">
	<name>hathor</name>
	<creationDate>12/1/2009</creationDate>
	<author>Andrea Tarr</author>
	<authorEmail>hathor@tarrconsulting.com</authorEmail>
	<authorUrl>http://www.tarrconsulting.com</authorUrl>
	<copyright></copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.14</version>
	<description>Accessible Administration template for Joomla! 1.6.</description>
	<files>
		<filename>component.php</filename>
		<filename>cpanel.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>login.php</filename>
		<filename>LICENSE.txt</filename>
		<filename>params.ini</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
	</files>
	<positions>
		<position>menu</position>
		<position>submenu</position>
		<position>toolbar</position>
		<position>title</position>
		<position>status</position>
		<position>icon</position>
		<position>cp_shell</position>
		<position>cpanel</position>
		<position>debug</position>
	</positions>
	<fields>
		<field name="showSiteName" type="radio" default="0" label="Show Site Name" description="Show the site name in the template header">
			<option value="0">JDISABLED</option>
			<option value="1">JENABLED</option>
		</field>
		<field name="highContrast" type="radio" default="0" label="High Contrast Colors" description="Use high contrast color palette for template">
			<option value="0">JDISABLED</option>
			<option value="1">JENABLED</option>
		</field>
		<field name="boldText" type="radio" default="0" label="Bold Text" description="Use bold text">
			<option value="0">JDISABLED</option>
			<option value="1">JENABLED</option>
		</field>
		<field name="altMenu" type="radio" default="0" label="Alternate Menu" description="Use the alternate menu which integrates mouse and keyboard. JavaScript Required.">
			<option value="0">JDISABLED</option>
			<option value="1">JENABLED</option>
		</field>
	</fields>
</install>
