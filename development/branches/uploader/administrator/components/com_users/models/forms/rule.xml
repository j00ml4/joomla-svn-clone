<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: rule.xml 12627 2009-08-13 12:25:17Z pentacle $ -->
<form>
	<fields>
		<field
			id="id"
			name="id"
			type="text"
			default="0"
			required="true"
			readonly="true"
		/>

		<field
			id="section_id"
			name="section_id"
			type="AclSection"
			default="0"
			section_type="acl"
			label="Section"
			description="JX Section ID Desc"
		/>

		<field
			id="note"
			name="note"
			type="text"
			default=""
			class="inputbox"
			required="true"
			label="JX ACL Note"
			description="This is the section the rule is placed in"
		/>

		<field
			id="return_value"
			name="return_value"
			type="text"
			default=""
			size="30"
			class="inputbox"
			label="JX ACL Return Value"
		/>

		<field
			id="enabled"
			name="enabled"
			type="radio"
			default="1"
			class="inputbox"
			label="JX ACL Enabled"
		>
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>

		<field
			id="allow"
			name="allow"
			type="radio"
			default="1"
			class="inputbox"
			label="JX ACL Allowed"
		>
			<option value="0">JX Deny</option>
			<option value="1">JX Allow</option>
		</field>

		<field
			id="updated_date"
			name="updated_date"
			type="text"
			default=""
			size="30"
			class="readonly"
			readonly="true"
			label="JX ACL Updated Date"
		/>

		<field
			name="acl_type"
			type="hidden"
		/>
	</fields>
</form>