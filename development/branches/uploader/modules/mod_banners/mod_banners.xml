<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.6.0"
	client="site"
	method="upgrade">
	<name>Banners</name>
	<author>Joomla! Project</author>
	<creationDate>July 2006</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.6.0</version>
	<description>mod_banners_Desc</description>
	<files>
		<filename
			module="mod_banners">mod_banners.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.php</filename>
		<filename>mod_banners.xml</filename>
	</files>
	<languages>
		<language
			tag="en-GB">en-GB.mod_banners.ini</language>
	</languages>
	<fields
		addfieldpath="/administrator/components/com_banners/models/fields">
		<field
			name="target"
			type="list"
			default="1"
			label="mod_banners_Target_Label"
			description="mod_banners_Target_Desc">
			<option
				value="0">mod_banners_Parent</option>
			<option
				value="1">mod_banners_NewWindowWithBrowserNavigation</option>
			<option
				value="2">mod_banners_NewWindowWithoutBrowserNavigation</option>
		</field>

		<field
			name="spacer1"
			type="spacer"
			hr="true"
			/>

		<field
			name="count"
			type="text"
			default="1"
			label="mod_banners_Count_Label"
			description="mod_banners_Count_Desc" />

		<field
			name="cid"
			type="bannerclient"
			default=""
			label="mod_banners_BannerClient_Label"
			description="mod_banners_BannerClient_Label" />

		<field
			name="catid"
			type="category"
			extension="com_banners"
			default=""
			label="mod_banners_Category_Label"
			description="mod_banners_Category_Desc" />

		<field
			name="tag_search"
			type="radio"
			default="0"
			label="mod_banners_Tag_Label"
			description="mod_banners_Tag_Desc">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>
		<field
			name="ordering"
			type="list"
			default="0"
			label="mod_banners_Randomise_Label"
			description="mod_banners_Randomise_Desc">
			<option
				value="0">mod_banners_StickyOrdering</option>
			<option
				value="random">mod_banners_StickyRandomise</option>
		</field>

		<field
			name="spacer2"
			type="spacer"
			hr="true"
			/>

		<field
			name="header_text"
			type="textarea"
			rows="3"
			cols="40"
			default=""
			label="mod_banners_Header_Label"
			description="mod_banners_Header_Desc" />

		<field
			name="footer_text"
			type="textarea"
			rows="3"
			cols="40"
			default=""
			label="mod_banners_Footer_Label"
			description="mod_banners_Header_Desc" />
	</fields>
	<fields
		group="advanced">
		<field
			name="layout"
			type="modulelayout"
			label="JFIELD_ALT_LAYOUT_LABEL"
			description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

		<field
			name="moduleclass_sfx"
			type="text"
			default=""
			label="MODULES_FIELD_MODULECLASS_SFX_LABEL"
			description="MODULES_FIELD_MODULECLASS_SFX_DESC" />

		<field
			name="cache"
			type="list"
			default="1"
			label="MODULES_FIELD_CACHING_LABEL"
			description="MODULES_FIELD_CACHING_DESC">
			<option
				value="1">USE_GLOBAL</option>
			<option
				value="0">MODULES_FIELD_VALUE_NOCACHING</option>
		</field>

		<field
			name="cache_time"
			type="text"
			default="900"
			label="MODULES_FIELD_CACHE_TIME_LABEL"
			description="MODULES_FIELD_CACHE_TIME_DESC" />
	</fields>
</extension>
