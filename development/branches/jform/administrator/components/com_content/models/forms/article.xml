<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fields>
		<field name="id" type="hidden"
			class="inputbox"
			default="0"
			label="Content_Id_Label"
			readonly="true"
			required="true"
			size="10"
		/>

		<field name="asset_id" type="hidden"
			filter="unset"
		/>

		<field name="title" type="text"
			class="inputbox"
			description="JField_Title_Desc"
			label="JField_Title_Label"
			required="true"
			size="30"
		/>

		<field name="alias" type="text"
			class="inputbox"
			description="JField_Alias_Desc"
			label="JField_Alias_Label"
			size="45"
		/>

		<field name="articletext" type="editor"
			buttons="true"
			class="inputbox"
			description="Content_Articletext_Desc"
			filter="safehtml"
			label="Content_Articletext_Label"
		/>

		<field name="state" type="list"
			class="inputbox"
			default="1"
			description="JField_Published_Desc"
			filter="int"
			label="JField_Published_Label"
			size="1"
		>
			<option value="1">JOption_Published</option>
			<option value="0">JOption_UnPublished</option>
			<option value="-1">JOption_Archived</option>
			<option value="-2">JOption_Trashed</option>
		</field>

		<field name="catid" type="category"
			class="inputbox"
			description="JField_Category_Desc"
			extension="com_content"
			filter="int"
			label="JField_Category_Label"
			required="true"
		>
			<option value="0">JOption_No_Category</option>
		</field>

		<field name="created" type="calendar"
			class="inputbox"
			description="Content_Created_Desc"
			label="Content_Created_Label"
			filter="user_utc"
			format="%Y-%m-%d %H:%M:%S"
			size="16"
		/>

		<field name="created_by" type="user"
			description="Content_Created_by_Desc"
			label="Content_Created_by_Label"
		/>

		<field name="created_by_alias" type="text"
			class="inputbox"
			description="Content_Created_by_alias_Desc"
			label="Content_Created_by_alias_Label"
			size="20"
		/>

		<field name="modified" type="text"
			class="readonly"
			description="Content_Modified_Desc"
			filter="unset"
			label="Content_Modified_Label"
			readonly="true"
			size="16"
		/>

		<field name="modified_by" type="hidden"
			filter="unset"
		/>

		<field name="checked_out" type="hidden"
			filter="unset"
		/>

		<field name="checked_out_time" type="hidden"
			filter="unset"
		/>

		<field name="publish_up" type="calendar"
			class="inputbox"
			description="Content_Publish_up_Desc"
			filter="user_utc"
			format="%Y-%m-%d %H:%M:%S"
			label="Content_Publish_up_Label"
			size="30"
		/>

		<field name="publish_down" type="calendar"
			class="inputbox"
			description="Content_Publish_down_Desc"
			filter="user_utc"
			format="%Y-%m-%d %H:%M:%S"
			label="Content_Publish_down_Label"
			size="30"
		/>

		<field name="version" type="text"
			class="readonly"
			description="Content_Version_Desc"
			filter="unset"
			label="Content_Version_Label"
			readonly="true"
			size="6"
		/>

		<field name="ordering" type="text"
			class="inputbox"
			default="0"
			description="JField_Ordering_Desc"
			label="JField_Ordering_Label"
			size="6"
		/>

		<field name="metakey" type="textarea"
			class="inputbox"
			cols="30"
			description="JField_Meta_Keywords_Desc"
			label="JField_Meta_Keywords_Label"
			rows="3"
		/>

		<field name="metadesc" type="textarea"
			class="inputbox"
			cols="30"
			description="JField_Meta_Description_Desc"
			label="JField_Meta_Description_Label"
			rows="3"
		/>

		<field name="access" type="accesslevel"
			class="inputbox"
			description="JField_Access_Desc"
			label="JField_Access_Label"
			size="1"
		/>

		<field name="hits" type="text"
			class="readonly"
			description="Content_Hits_Desc"
			filter="unset"
			label="Content_Hits_Label"
			readonly="true"
			size="6"
		/>

		<field name="language" type="contentlanguage"
			class="inputbox"
			description="JField_Language_Desc"
			label="JField_Language_Label"
		>
			<option value="">JOption_Default_Language</option>
		</field>

		<field name="featured" type="radio"
			default="0"
			description="COM_CONTENT_FEATURED_DESC"
			label="COM_CONTENT_FEATURED_LABEL"
		>
			<option value="0">JOFF</option>
			<option value="1">JON</option>
		</field>

		<field name="xreference" type="text"
			class="inputbox"
			description="Content_XReference_Desc"
			label="Content_XReference_Label"
			size="20"
		/>

		<field name="rules" type="rules"
			class="inputbox"
			component="com_content"
			description="Content_Rules_Desc"
			filter="rules"
			label="Content_Rules_Label"
			section="article"
		/>

		<fields name="attribs">
			<fieldset name="options" label="Content_Options">
	
				<field name="show_title" type="list"
					description="Content_Attribs_Show_Title_Desc"
					label="Content_Attribs_Show_Title_Label"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
		
				<field name="link_titles" type="list"
					description="Content_Attribs_Linked_Titles_Desc"
					label="Content_Attribs_Linked_Titles_Label"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
		
				<field name="show_intro" type="list"
					description="Content_Attribs_Show_Intro_Desc"
					label="Content_Attribs_Show_Intro_Label"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
		
				<field name="show_category" type="list"
					description="Content_Attribs_Show_Category_Desc"
					label="Content_Attribs_Show_Category_Label"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
		
				<field name="link_category" type="list"
					description="Content_Attribs_Link_Category_Desc"
					label="Content_Attribs_Link_Category_Label"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
		
				<field name="show_author" type="list"
					description="Content_Attribs_Show_Author_Desc"
					label="Content_Attribs_Show_Author_Label"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
		
				<field name="show_create_date" type="list"
					description="Content_Attribs_Show_Create_Date_Desc"
					label="Content_Attribs_Show_Create_Date_Label"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
		
				<field name="show_modify_date" type="list"
					description="Content_Attribs_Show_Modify_Date_Desc"
					label="Content_Attribs_Show_Modify_Date_Label"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
		
				<field name="show_publish_date" type="list"
					description="Content_Attribs_Show_Publish_Date_Desc"
					label="Content_Attribs_Show_Publish_Date_Label"
				>
					<option value="">JCOMMON_USE_GLOBAL</option>
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
		
				<field name="show_readmore" type="list"
					description="Content_Attribs_Show_Readmore_Desc"
					label="Content_Attribs_Show_Readmore_Label"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
		
				<field name="show_print_icon" type="list"
					description="Content_Attribs_Show_Print_Icon_Desc"
					label="Content_Attribs_Show_Print_Icon_Label"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
		
				<field name="show_email_icon" type="list"
					description="Content_Attribs_Show_Email_Icon_Desc"
					label="Content_Attribs_Show_Email_Icon_Label"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
		
				<field name="page_title" type="text"
					description="JField_Alt_Page_title_Desc"
					label="JField_Alt_Page_title_Label"
					size="25"
				/>
		
				<field name="alternative_readmore" type="inputbox"
					class="inputbox"
					description="JField_Readmore_Desc"
					label="JField_Readmore_Label"
					size="25"
				/>
		
				<field name="layout" type="componentlayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					extension="com_content"
					description="JField_Alt_Component_Layout_Desc"
					view="article"
				/>
		
				<field name="article-allow_ratings" type="list"
					description="Content_Attribs_Allow_Ratings_Desc"
					label="Content_Attribs_Allow_Ratings_Label"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
		
				<field name="article-allow_comments" type="list"
					label="Content_Attribs_Allow_Comments_Label"
					description="Content_Attribs_Allow_Comments_Desc"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
	
			</fieldset>
		</fields>

		<fields name="metadata">
			<fieldset name="metadata" label="" description="">
	
				<field name="robots" type="list"
					description="JField_Metadata_Robots_Desc"
					label="JField_Metadata_Robots_Label"
				>
					<option value="">USE_GLOBAL</option>
					<option value="0">index, follow</option>
					<option value="1">noindex, follow</option>
					<option value="2">index, nofollow</option>
					<option value="3">noindex, nofollow</option>
					<option value="4">Don't display robots tag</option>
				</field>
	
				<field name="author" type="text"
					description="JField_Metadata_Author_Desc"
					label="JField_Metadata_Author_Label"
					size="20"
				/>
			</fieldset>
		</fields>
	</fields>
</form>
