<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fields>
		<field name="id" type="hidden"
			default="0"
			readonly="true"
			required="true"
		/>

		<field name="name" type="text"
			class="inputbox"
			description="JField_Title_Desc"
			label="JField_Title_Label"
			required="true"
			size="30"
		/>

		<field name="alias" type="text"
			class="inputbox"
			description="JField_Alias_Desc"
			label="JField_Alias_Label"
			size="45"
		/>

		<field name="published" type="list"
			class="inputbox"
			default="1"
			description="JField_Published_Desc"
			label="JField_Published_Label"
			size="1"
		>
			<option value="1">JOption_Published</option>
			<option value="0">JOption_UnPublished</option>
			<option value="-1">JOption_Archived</option>
			<option value="-2">JOption_Trashed</option>
		</field>

		<field name="catid" type="category"
			class="inputbox"
			description="JField_Category_Desc"
			extension="com_newsfeeds"
			label="JField_Category_Label"
			required="true"
		>
			<option value="0">JOption_No_Category</option>
		</field>

		<field name="link" type="text"
			class="inputbox"
			description="Newsfeeds_Link_Desc"
			label="Newsfeeds_Link_Label"
			required="true"
			size="60"
		/>

		<field name="numarticles" type="text"
			class="inputbox"
			default="5"
			description="Newsfeeds_Numarticles_Desc"
			label="Newsfeeds_Numarticles_Label"
			required="true"
			size="2"
		/>

		<field name="cache_time" type="text"
			class="inputbox"
			default="3600"
			description="Newsfeeds_Cachetime_Desc"
			label="Newsfeeds_Cachetime_Label"
			required="true"
			size="4"
		/>

		<field name="ordering" type="ordering"
			class="inputbox"
			description="Newsfeeds_Ordering_Desc"
			label="Newsfeeds_Ordering_Label"
		/>

		<field name="rtl" type="list"
			class="inputbox"
			default="1"
			description="Newsfeeds_RTL_Desc"
			label="Newsfeeds_RTL_Label"
		>
			<option value="0">Newsfeeds_RTL_select</option>
			<option value="1">Newsfeeds_RTL_left_to_right</option>
			<option value="1">Newsfeeds_RTL_right_to_left</option>
		</field>

		<field name="checked_out" type="text"
			class="inputbox"
			description="Newsfeeds_Checkedout_Desc"
			filter="unset"
			label="Newsfeeds_Checkedout_Label"
			readonly="true"
			size="6"
		/>

		<field name="checked_out_time" type="text"
			class="inputbox"
			description="Newsfeeds_Checkedout_Time_Desc"
			filter="unset"
			label="Newsfeeds_Checkedout_Time_Label"
			readonly="true"
			size="6"
		/>

		<field name="access" type="accesslevel"
			class="inputbox"
			description="JField_Access_Desc"
			label="JField_Access_Label"
			size="1"
		/>

		<field name="language" type="contentlanguage"
			class="inputbox"
			label="JField_Language_Label"
			description="JField_Newsfeed_Language_Desc"
		>
			<option value="">JOption_Default_Language</option>
		</field>

		<fields group="params">

			<fieldset name="options" label="Newsfeeds_Options">

				<field name="show_headings" type="list"
					description="Newsfeeds_Table_Headings_Desc"
					label="Newsfeeds_Table_Headings_Label"
				>
					<option value="">JCOMMON_USE_GLOBAL</option>
					<option value="0">JCOMMON_HIDE</option>
					<option value="1">JCOMMON_SHOW</option>
				</field>

				<field name="show_name" type="list"
					description="Newsfeeds_Name_Column_Desc"
					label="Newsfeeds_Name_Column_Label"
				>
					<option value="">JCOMMON_USE_GLOBAL</option>
					<option value="0">JCOMMON_HIDE</option>
					<option value="1">JCOMMON_SHOW</option>
				</field>

				<field name="show_articles" type="list"
					description="Newsfeeds_Num_Articles_Column_Desc"
					label="Newsfeeds_Num_Articles_Column_Label"
				>
					<option value="">JCOMMON_USE_GLOBAL</option>
					<option value="0">JCOMMON_HIDE</option>
					<option value="1">JCOMMON_SHOW</option>
				</field>

				<field name="show_link" type="list"
					description="Newsfeeds_Show_Links_Desc"
					label="Newsfeeds_Show_Links_Label"
				>
					<option value="">JCOMMON_USE_GLOBAL</option>
					<option value="0">JCOMMON_HIDE</option>
					<option value="1">JCOMMON_SHOW</option>
				</field>

				<!-- Spacer -->

				<field name="show_cat_description" type="list"
					description="Newsfeeds_Show_Cat_Desc"
					label="Newsfeeds_Show_Cat_Label"
				>
					<option value="">JCOMMON_USE_GLOBAL</option>
					<option value="0">JCOMMON_HIDE</option>
					<option value="1">JCOMMON_SHOW</option>
				</field>

				<field name="show_cat_items" type="list"
					description="Newsfeeds_Show_Cat_Items_Desc"
					label="Newsfeeds_Show_Cat_Items_Label"
				>
					<option value="">JCOMMON_USE_GLOBAL</option>
					<option value="0">JCOMMON_HIDE</option>
					<option value="1">JCOMMON_SHOW</option>
				</field>

				<!-- Spacer -->

				<field name="show_feed_image" type="list"
					description="Newsfeeds_Show_Feed_Image_Desc"
					label="Newsfeeds_Show_Feed_Image_Label"
				>
					<option value="">JCOMMON_USE_GLOBAL</option>
					<option value="0">JCOMMON_HIDE</option>
					<option value="1">JCOMMON_SHOW</option>
				</field>

				<field name="show_feed_description" type="list"
					description="Newsfeeds_Show_Feed_Description_Desc"
					label="Newsfeeds_Show_Feed_Description_Label"
				>
					<option value="">JCOMMON_USE_GLOBAL</option>
					<option value="0">JCOMMON_HIDE</option>
					<option value="1">JCOMMON_SHOW</option>
				</field>

				<field name="show_item_description" type="list"
					description="Newsfeeds_Show_Item_Description_Desc"
					label="Newsfeeds_Show_Item_Description_Label"
				>
					<option value="">JCOMMON_USE_GLOBAL</option>
					<option value="0">JCOMMON_HIDE</option>
					<option value="1">JCOMMON_SHOW</option>
				</field>

				<field name="feed_word_count" type="text"
					default="0"
					description="Newsfeeds_Word_Count_Desc"
					label="Newsfeeds_Word_Count_Label"
					size="6"
				/>
			</fieldset>
		</fields>

	</fields>
</form>