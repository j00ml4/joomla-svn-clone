<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fields>
		<field name="id" type="hidden"
			default="0"
			readonly="true"
			required="true"
		/>

		<field name="asset_id" type="hidden"
			filter="unset"
		/>

		<field name="parent_id" type="categoryparent"
			description="CATEGORIES_PARENT_DESC"
			label="CATEGORIES_PARENT_LABEL"
		/>

		<field name="lft" type="hidden"
			filter="unset"
		/>

		<field name="rgt" type="hidden"
			filter="unset"
		/>

		<field name="level" type="hidden"
			filter="unset"
		/>

		<field name="path" type="text"
			class="readonly"
			description="CATEGORIES_PATH_DESC"
			label="CATEGORIES_PATH_LABEL"
			readonly="true"
			size="40"
		/>

		<field name="extension" type="text"
			class="readonly"
			description="CATEGORIES_EXTENSION_DESC"
			label="CATEGORIES_EXTENSION_LABEL"
			readonly="true"
			size="40"
		/>

		<field name="title" type="text"
			description="JFIELD_TITLE_DESC"
			label="JFIELD_TITLE_LABEL"
			required="true"
			size="40"
		/>

		<field name="alias" type="text"
			description="JFIELD_ALIAS_DESC"
			label="JFIELD_ALIAS_LABEL"
			size="40"
		/>

		<field name="note" type="text"
			description="JFIELD_NOTE_DESC"
			label="JFIELD_NOTE_LABEL"
			size="40"
		/>

		<field name="description" type="editor"
			buttons="readmore,pagebreak"
			description="CATEGORIES_DESCRIPTION_DESC"
			label="CATEGORIES_DESCRIPTION_LABEL"
		/>

		<field name="published" type="list"
			default="1"
			description="JFIELD_PUBLISHED_DESC"
			label="JFIELD_PUBLISHED_LABEL"
			size="1"
		>
			<option value="1">JOPTION_PUBLISHED</option>
			<option value="0">JOPTION_UNPUBLISHED</option>
			<option value="-1">JOPTION_ARCHIVED</option>
			<option value="-2">JOPTION_TRASHED</option>
		</field>

		<field name="checked_out" type="hidden"
			filter="unset"
		/>

		<field name="checked_out_time" type="hidden"
			filter="unset"
		/>

		<field name="access" type="accesslevel"
			description="JFIELD_ACCESS_DESC"
			label="JFIELD_ACCESS_LABEL"
		/>

		<field name="metadesc" type="textarea"
			cols="40"
			description="JFIELD_META_DESCRIPTION_DESC"
			label="JFIELD_META_DESCRIPTION_LABEL"
			rows="3"
		/>

		<field name="metakey" type="textarea"
			cols="40"
			description="JFIELD_META_KEYWORDS_DESC"
			label="JFIELD_META_KEYWORDS_LABEL"
			rows="3"
		/>

		<field name="created_user_id" type="hidden"
			filter="unset"
		/>

		<field name="created_time" type="hidden"
			filter="unset"
		/>

		<field name="modified_user_id" type="hidden"
			filter="unset"
		/>

		<field name="modified_time" type="hidden"
			filter="unset"
		/>

		<field name="hits" type="hidden"
			filter="unset"
		/>

		<field name="language" type="contentlanguage"
			description="JFIELD_CATEGORY_LANGUAGE_DESC"
			label="JFIELD_LANGUAGE_LABEL"
		>
			<option value="">JOPTION_DEFAULT_LANGUAGE</option>
		</field>

		<field name="rules" type="rules"
			component="com_content"
			description="JFIELD_RULES_DESC"
			filter="rules"
			label="JFIELD_RULES_LABEL"
			section="category"
		/>
	</fields>
</form>
