<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fields>
		<field name="id" type="hidden"
			default="0"
			required="true"
			readonly="true"
		/>

		<field name="title" type="text"
			class="inputbox"
			description="MODULES_FIELD_TITLE_DESC"
			label="MODULES_FIELD_TITLE_LABEL"
			maxlength="100"
			required="true"
			size="35"
		/>

		<field name="note" type="text"
			class="inputbox"
			description="MODULES_FIELD_NOTE_DESC"
			label="MODULES_FIELD_NOTE_LABEL"
			maxlength="100"
			size="35"
		/>

		<field name="module" type="text"
			class="readonly"
			description="MODULES_FIELD_MODULE_DESC"
			label="MODULES_FIELD_MODULE_LABEL"
			readonly="readonly"
			size="20"
		/>

		<field name="showtitle" type="list"
			class="inputbox"
			default="1"
			description="MODULES_FIELD_SHOWTITLE_DESC"
			label="MODULES_FIELD_SHOWTITLE_LABEL"
			size="1"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="published" type="list"
			class="inputbox"
			default="1"
			description="MODULES_FIELD_PUBLISHED_DESC"
			label="MODULES_FIELD_PUBLISHED_LABEL"
			size="1"
		>
			<option value="1">MODULES_FIELD_VALUE_PUBLISHED</option>
			<option value="0">MODULES_FIELD_VALUE_UNPUBLISHED</option>
		</field>

		<field name="publish_up" type="calendar"
			class="inputbox"
			description="MODULES_FIELD_PUBLISH_UP_DESC"
			filter="user_utc"
			format="%Y-%m-%d %H:%M:%S"
			label="MODULES_FIELD_PUBLISH_UP_LABEL"
			size="16"
		/>

		<field name="publish_down" type="calendar"
			class="inputbox"
			description="MODULES_FIELD_PUBLISH_DOWN_DESC"
			filter="user_utc"
			format="%Y-%m-%d %H:%M:%S"
			label="MODULES_FIELD_PUBLISH_DOWN_LABEL"
			size="16"
		/>

		<field name="client_id" type="list"
			class="inputbox"
			default="0"
			description="MODULES_FIELD_CLIENT_ID_DESC"
			label="MODULES_FIELD_CLIENT_ID_LABEL"
			readonly="true"
			size="1"
		>
			<option value="0">COM_MODULES_OPTION_SITE</option>
			<option value="1">COM_MODULES_OPTION_ADMINISTRATOR</option>
		</field>

		<field name="position" type="moduleposition"
			class="inputbox"
			default="left"
			description="MODULES_FIELD_POSITION_DESC"
			label="MODULES_FIELD_POSITION_LABEL"
			maxlength="50"
		/>

		<field name="access" type="accesslevel"
			class="inputbox"
			description="JFIELD_ACCESS_DESC"
			label="JFIELD_ACCESS_LABEL"
			size="1"
		/>

		<field name="ordering" type="moduleorder"
			class="inputbox"
			description="JFIELD_ORDERING_DESC"
			label="JFIELD_ORDERING_LABEL"
		/>

		<field name="content" type="editor"
			buttons="true"
			class="inputbox"
			description="MODULES_FIELD_CONTENT_DESC"
			filter="safehtml"
			label="MODULES_FIELD_CONTENT_LABEL"
		/>

		<field name="language" type="contentlanguage"
			class="inputbox"
			description="JFIELD_MODULE_LANGUAGE_DESC"
			label="JFIELD_LANGUAGE_LABEL"
		>
			<option value="">JOPTION_DEFAULT_LANGUAGE</option>
		</field>

		<field name="params" type="hidden" />

		<field name="assignment" type="hidden" />

		<field name="assigned" type="hidden" />
	</fields>
</form>
