<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fields>
		<fieldset name="hyperlinkoptions" label="Menus_Linktype_Options_Label" description="">
	
			<field name="menu-anchor_title" type="text"
				description="Menus_item_Anchor_Title_Desc"
				label="Menus_Item_Anchor_Title_Label"
			/>
	
			<field name="menu-anchor_css" type="text"
				description="Menus_item_Anchor_CSS_Desc"
				label="Menus_Item_Anchor_CSS_Label"
			/>
	
			<field name="menu_image" type="text"
				description="Menus_Item_Menu_Image_Desc"
				label="Menus_Item_Menu_Image_Label"
			/>
	
			<field name="show_page_title" type="radio"
				default="1"
				description="Menus_Item_Show_Page_Title_Desc"
				filter="integer"
				label="Menus_Item_Show_Page_Title_Label"
			>
				<option value="0" class="no">JNo</option>
				<option value="1" class="yes">JYes</option>
			</field>
	
			<field name="page_title" type="text"
				description="Menus_Item_Page_Title_Desc"
				label="Menus_Item_Page_Title_Label"
			/>
	
			<field name="page_heading" type="text"
				description="Menus_Item_Page_Heading_Desc"
				label="Menus_Item_Page_Heading_Label"
			/>
	
			<field name="pageclass_sfx" type="text"
				description="Menus_Item_Page_Class_Desc"
				label="Menus_Item_Page_Class_Label"
			/>
	
			<field name="menu-meta_description" type="textarea"
				cols="40"
				description="Menus_Item_Meta_Description_Desc"
				label="JField_Meta_Description_Label"
				rows="3"
			/>
	
			<field name="menu-meta_keywords" type="textarea"
				cols="40"
				description="Menus_Item_Meta_Keywords_Desc"
				label="JField_Meta_Keywords_Label"
				rows="3"
			/>
	
			<field name="robots" type="list"
				description="JField_Metadata_Robots_Desc"
				label="JField_Metadata_Robots_Label"
			>
				<option value="">USE_GLOBAL</option>
				<option value="0">index, follow</option>
				<option value="1">noindex, follow</option>
				<option value="2">index, nofollow</option>
				<option value="3">noindex, nofollow</option>
				<option value="4">Don't display robots tag</option>
			</field>
	
			<field	name="secure" type="radio"
				default="0"
				description="Menus_Item_Secure_Desc"
				filter="integer"
				label="Menus_Item_Secure_Label"
			>
				<option value="-1">JOFF</option>
				<option value="1">JON</option>
				<option value="0">Ignore</option>
			</field>
		</fieldset>
	</fields>
</form>
