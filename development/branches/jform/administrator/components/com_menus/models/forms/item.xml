<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fields>
		<field name="id" type="hidden"
			default="0"
			filter="int"
			readonly="true"
			required="true"
		/>

		<field name="title" type="text"
			class="inputbox"
			description="MENUS_ITEM_TITLE_DESC"
			label="MENUS_ITEM_TITLE_LABEL"
			required="true"
			size="40"
		/>

		<field name="alias" type="alias"
			class="inputbox"
			description="MENUS_ITEM_ALIAS_DESC"
			label="JFIELD_ALIAS_LABEL"
			size="40"
		/>

		<field name="note" type="text"
			class="inputbox"
			description="MENUS_ITEM_NOTE_DESC"
			label="JFIELD_NOTE_LABEL"
			size="40"
		/>

		<field name="link" type="link"
			class="inputbox"
			description="MENUS_ITEM_LINK_DESC"
			label="MENUS_ITEM_LINK_LABEL"
			size="50"
		/>

		<field name="menutype" type="menu"
			class="inputbox"
			description="MENUS_MENU_ASSIGNED_DESC"
			label="MENUS_MENU_ASSIGNED_LABEL"
			required="true"
			size="1"
		/>

		<field name="type" type="menutype"
			class="inputbox"
			description="MENUS_ITEM_TYPE_DESC"
			label="MENUS_ITEM_TYPE_LABEL"
			required="true"
			size="40"
		/>

		<field name="published" type="list"
			class="inputbox"
			default="1"
			description="JFIELD_PUBLISHED_DESC"
			filter="integer"
			label="JFIELD_PUBLISHED_LABEL"
			size="1"
		>
			<option value="1">JOPTION_PUBLISHED</option>
			<option value="0">JOPTION_UNPUBLISHED</option>
			<option value="-2">JOPTION_TRASHED</option>
		</field>

		<field name="parent_id" type="menuparent"
			class="inputbox"
			default="MENU_ITEM_ROOT"
			description="MENUS_ITEM_PARENT_DESC"
			filter="int"
			label="MENUS_ITEM_PARENT_LABEL"
			size="1"
		/>

		<field name="component_id" type="hidden"
			filter="int"
		/>

		<field name="ordering" type="ordering"
			class="inputbox"
			description="JFIELD_ORDERING_DESC"
			filter="int"
			label="JFIELD_ORDERING_LABEL"
		/>

		<field name="browserNav" type="list"
			class="inputbox"
			default="0"
			description="MENUS_ITEM_BROWSERNAV_DESC"
			filter="int"
			label="MENUS_ITEM_BROWSERNAV_LABEL"
		>
			<option value="0">MENUS_BROWSERNAV_OPTION_PARENT</option>
			<option value="1">MENUS_BROWSERNAV_OPTION_NEW_WITH_NAV</option>
			<option value="2">MENUS_BROWSERNAV_OPTION_NEW_WITHOUT_NAV</option>
		</field>

		<field name="access" type="accesslevel"
			class="inputbox"
			default="1"
			description="JFIELD_ACCESS_DESC"
			label="JFIELD_ACCESS_LABEL"
			filter="integer"
		/>

		<field name="template_style_id" type="templatestyle"
			class="inputbox"
			description="MENUS_ITEM_TEMPLATE_DESC"
			filter="int"
			label="MENUS_ITEM_TEMPLATE_LABEL"
		>
			<option value="0">JOPTION_USE_DEFAULT</option>
		</field>

		<field name="params" type="textarea"
			class="inputbox"
			cols="60"
			description="MENUS_ITEM_PARAMS_DESC"
			label="JCOMMON_PARAMS_LABEL"
			rows="3"
		/>

		<field name="home" type="radio"
			class="inputbox"
			default="0"
			description="MENUS_ITEM_HOME_DESC"
			filter="integer"
			label="MENUS_ITEM_HOME_LABEL"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field name="path" type="hidden"
			filter="unset"
		/>

		<field name="level" type="hidden"
			filter="unset"
		/>

		<field name="checked_out" type="hidden"
			filter="unset"
		/>

		<field name="checked_out_time" type="hidden"
			filter="unset"
		/>

		<field name="lft" type="hidden"
			filter="unset"
		/>

		<field name="rgt" type="hidden"
			filter="unset"
		/>
	</fields>
</form>