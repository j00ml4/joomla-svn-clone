<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset>
		<field
			name="upload_extensions"
			type="text"
			size="50"
			default="bmp,csv,doc,gif,ico,jpg,jpeg,odg,odp,ods,odt,pdf,png,ppt,swf,txt,xcf,xls,BMP,CSV,DOC,GIF,ICO,JPG,JPEG,ODG,ODP,ODS,ODT,PDF,PNG,PPT,SWF,TXT,XCF,XLS"
			label="LEGAL_EXTENSIONS_LABEL"
			description="LEGAL_EXTENSIONS_DESC" />

		<field
			name="upload_maxsize"
			type="text"
			size="50"
			default="10000000"
			label="MAXIMUM_SIZE_LABEL"
			description="MAXIMUM_SIZE_DESC" />

		<field
			name="file_path"
			type="text"
			size="50"
			default="images"
			label="PATH TO FILE FOLDER"
			description="TIPFILEFOLDERWARN" />

		<field
			name="image_path"
			type="text"
			size="50"
			default="images"
			label="PATH TO IMAGE FOLDER"
			description="TIPIMAGEFOLDERWARN" />

		<field
			name="restrict_uploads"
			type="radio"
			default="1"
			label="RESTRICT_UPLOADS"
			description="RESTRICT_UPLOADS_DESC">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>

		<field
			name="allowed_media_usergroup"
			type="list"
			default="3"
			label="ALLOWED_USERGROUP"
			description="ALLOWED_USERGROUP_DESC">
			<option
				value="4">Registered</option>
			<option
				value="3">Author</option>
			<option
				value="2">Editor</option>
			<option
				value="1">Publisher</option>
		</field>

		<field
			name="check_mime"
			type="radio"
			default="1"
			label="CHECK_MIME"
			description="CHECK_MIME_DESC">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>

		<field
			name="image_extensions"
			type="text"
			size="50"
			default="bmp,gif,jpg,png"
			label="LEGAL_IMAGE_EXTENSIONS_LABEL"
			description="LEGAL_IMAGE_EXTENSIONS_DESC" />

		<field
			name="ignore_extensions"
			type="text"
			size="50"
			default=""
			label="IGNORED_EXTENSIONS_LABEL"
			description="IGNORED_EXTENSIONS_DESC" />

		<field
			name="upload_mime"
			type="text"
			size="50"
			default="image/jpeg,image/gif,image/png,image/bmp,application/x-shockwave-flash,application/msword,application/excel,application/pdf,application/powerpoint,text/plain,application/x-zip"
			label="LEGAL_MIME_TYPES_LABEL"
			description="LEGAL_MIME_TYPES_DESC" />

		<field
			name="upload_mime_illegal"
			type="text"
			size="50"
			default="text/html"
			label="ILLEGAL_MIME_TYPES"
			description="ILLEGAL_MIME_TYPES_DESC" />

		<field
			name="enable_flash"
			type="radio"
			default="0"
			label="ENABLE FLASH UPLOADER"
			description="ENABLE FLASH UPLOADER DESC">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>
	</fieldset>

	<fieldset
		group="permissions"
		label="JConfig_Permissions_Label"
		description="JConfig_Permissions_Desc"
		hidden="true">

		<field
			name="rules"
			type="rules"
			label="JConfig_Permissions_Label"
			filter="rules"
			component="com_media"
			section="component">
			<action
				name="core.admin"
				title="JAction_Admin"
				description="JAction_Manage_Component_Desc" />
			<action
				name="core.manage"
				title="JAction_Manage"
				description="JAction_Manage_Component_Desc" />
			<action
				name="core.create"
				title="JAction_Create"
				description="JAction_Create_Component_Desc" />
			<action
				name="core.delete"
				title="JAction_Delete"
				description="JAction_Delete_Component_Desc" />
			<action
				name="core.edit"
				title="JAction_Edit"
				description="JAction_Edit_Component_Desc" />
			<action
				name="core.edit.state"
				title="JAction_Edit_State"
				description="JAction_Edit_State_Component_Desc" />
		</field>
	</fieldset>
</config>
