<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fields>
		<field name="id" type="hidden"
			default="0"
			readonly="true"
			required="true"
		/>

		<field name="old_url" type="text"
			class="inputbox"
			description="Redir_Field_Old_URL_Desc"
			label="Redir_Field_Old_URL_Label"
			required="true"
			size="50"
		/>

		<field name="new_url" type="text"
			class="inputbox"
			description="Redir_Field_New_URL_Desc"
			label="Redir_Field_New_URL_Label"
			size="50"
		/>

		<field name="comment" type="text"
			class="inputbox"
			description="Redir_Field_Comment_Desc"
			label="Redir_Field_Comment_Label"
			size="40"
		/>

		<field name="published" type="list"
			class="inputbox"
			default="1"
			description="JField_Published_Desc"
			label="JField_Published_Label"
			required="true"
			size="1"
		>
			<option value="1">JOption_Enabled</option>
			<option value="0">JOption_Disabled</option>
			<option value="2">JOption_Archived</option>
			<option value="-2">JOption_Trashed</option>
		</field>

		<field name="referer" type="text"
			class="inputbox"
			default=""
			label="Redir_Field_REFERRER_Label"
			readonly="true"
			size="50"
		/>

		<field name="created_date" type="text"
			class="inputbox"
			label="Redir_Field_CREATED_DATE_Label"
			size="20"
			readonly="true"
		/>

		<field name="updated_date" type="text"
			class="inputbox"
			label="Redir_Field_UPDATED_DATE_Label"
			readonly="true"
			size="20"
		/>
	</fields>
</form>