<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fields addfieldpath="/administrator/components/com_banners/models/fields">

		<fieldset name="details">

			<field name="id" type="hidden"
				default="0"
				readonly="true"
				required="true"
			/>
	
			<field name="name" type="text"
				description="Banners_Name_Desc"
				label="Banners_Name_Label"
				required="true"
				size="40"
			/>
	
			<field name="alias" type="text"
				description="Banners_Alias_Desc"
				label="Banners_Alias_Label"
				size="40"
			/>
	
			<field name="catid" type="category"
				description="Banners_Category_Desc"
				extension="com_banners"
				label="Banners_Category_Label"
			>
				<option>JOption_No_Category</option>
			</field>
	
			<field name="state" type="list"
				default="1"
				description="Banners_State_Desc"
				label="Banners_State_Label"
				size="1"
			>
				<option value="1">JOption_Published</option>
				<option value="0">JOption_Unpublished</option>
				<option value="-1">JOption_Archived</option>
				<option value="-2">JOption_Trash</option>
			</field>
	
			<field name="cid" type="bannerclient"
				description="Banners_Client_Desc"
				label="Banners_Client_Label"
			/>
	
			<field name="description" type="textarea"
				cols="30"
				description="Banners_Description_Desc"
				label="Banners_Description_Label"
				rows="3"
			/>
	
			<field name="clickurl" type="text"
				description="Banners_ClickURL_Desc"
				label="Banners_ClickURL_Label"
			/>
	
			<field name="type" type="radio"
				default="0"
				description="Banners_Type_Desc"
				label="Banners_Type_Label"
			>
				<option value="0">Banners_Option_Image</option>
				<option value="1">Banners_Option_Custom</option>
			</field>

		</fieldset>

		<fieldset name="publish" label="Banners_Publishing_Details">
	
			<field name="created" type="calendar"
				description="Banners_Created_Desc"
				filter="user_utc"
				format="%Y-%m-%d %H:%M:%S"
				label="Banners_Created_Label"
				size="30"
			/>
	
			<field name="publish_up" type="calendar"
				description="Banners_Publish_up_Desc"
				label="Banners_Publish_up_Label"
				filter="user_utc"
				format="%Y-%m-%d %H:%M:%S"
				size="30"
			/>
	
			<field name="publish_down" type="calendar"
				description="Banners_Publish_down_Desc"
				label="Banners_Publish_down_Label"
				filter="user_utc"
				format="%Y-%m-%d %H:%M:%S"
				size="30"
			/>
	
			<field name="imptotal" type="imptotal"
				default="0"
				description="Banners_ImpTotal_Desc"
				label="Banners_ImpTotal_Label"
			/>
	
			<field name="impmade" type="impmade"
				default="0"
				description="Banners_ImpMade_Desc"
				label="Banners_ImpMade_Label"
			/>
	
			<field name="clicks" type="clicks"
				default="0"
				description="Banners_Clicks_Desc"
				label="Banners_Clicks_Label"
			/>
	
			<field name="purchase_type" type="list"
				default="0"
				description="Banners_PurchaseType_Desc"
				label="Banners_PurchaseType_Label"
			>
				<option value="-1">Banners_UseClientDefault</option>
				<option value="1">Banners_1</option>
				<option value="2">Banners_2</option>
				<option value="3">Banners_3</option>
				<option value="4">Banners_4</option>
				<option value="5">Banners_5</option>
			</field>
	
			<field name="track_impressions" type="list"
				default="0"
				description="Banners_TrackImpression_Desc"
				label="Banners_TrackImpression_Label"
			>
				<option value="-1">Banners_UseClientDefault</option>
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
	
			<field name="track_clicks" type="list"
				default="0"
				description="Banners_TrackClick_Desc"
				label="Banners_TrackClick_Label"
			>
				<option value="-1">Banners_UseClientDefault</option>
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
	
		</fieldset>

		<fieldset name="metadata" label="Banners_Metadata_Options">
	
			<field name="language" type="contentlanguage"
				description="JField_Language_Desc"
				label="JField_Language_Label"
			>
				<option value="">JOption_Default_Language</option>
			</field>
	
			<field name="metakey" type="textarea"
				cols="30"
				description="Banners_MetaKeywords_Desc"
				label="JField_Meta_Keywords_Label"
				rows="3"
			/>
	
			<field name="own_prefix" type="radio"
				default="0"
				description="Banners_BannerOwnPrefix_Desc"
				label="Banners_BannerOwnPrefix_Label"
			>
				<option value="0">JNo</option>
				<option value="1">JYes</option>
			</field>
	
			<field name="metakey_prefix" type="text"
				description="Banners_MetaKeywordPrefix_Desc"
				label="Banners_MetaKeywordPrefix_Label"
			/>
	
		</fieldset>

		<fields name="image">
	
			<field name="url" type="media"
				description="Banners_Image_Desc"
				directory="/images/banners"
				hide_none="1"
				label="Banners_Image_Label"
			/>
	
		</fields>

		<fields name="flash">
	
			<field name="width" type="text"
				class="inputbox validate-numeric"
				default="0"
				description="Banners_Width_Desc"
				label="Banners_Width_Label"
			/>
	
			<field name="height" type="text"
				class="inputbox validate-numeric"
				default="0"
				description="Banners_Height_Desc"
				label="Banners_Height_Label"
			/>
	
		</fields>

		<fields name="alt">
	
			<field name="alt" type="text"
				class="inputbox"
				description="Banners_Alt_Desc"
				label="Banners_Alt_Label"
			/>
	
		</fields>

		<fields name="custom">
	
			<field name="bannercode" type="textarea"
				cols="30"
				description="Banners_CustomCode_Desc"
				filter="raw"
				label="Banners_CustomCode_Label"
				rows="3"
			/>
	
		</fields>
	</fields>
</form>
