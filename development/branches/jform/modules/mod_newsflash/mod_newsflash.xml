<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.6.0"
	client="site"
	method="upgrade">
	<name>Newsflash</name>
	<author>Joomla! Project</author>
	<creationDate>July 2006</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.6.0</version>
	<description>DESCNEWSFLASH</description>
	<files>
		<filename
			module="mod_newsflash">mod_newsflash.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.php</filename>
		<filename>mod_newsflash.xml</filename>
	</files>
	<languages>
		<language
			tag="en-GB">en-GB.mod_newsflash.ini</language>
	</languages>
	<fields>
		<field
			name="catid"
			type="category"
			extension="com_content"
			default="0"
			label="Category"
			description="A content category" />

		<field
			name="image"
			type="radio"
			default="0"
			label="Show images"
			description="Display Article images">
			<option
				value="1">JYes</option>
			<option
				value="0">JNo</option>
		</field>
		<field
			name="link_titles"
			type="list"
			default=""
			label="Linked Titles"
			description="Make the Item titles linkable">
			<option
				value="">USE_GLOBAL</option>
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>
		<field
			name="showLastSeparator"
			type="radio"
			default="1"
			label="Show last separator"
			description="Show separator after last article">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>
		<field
			name="readmore"
			type="radio"
			default="0"
			label="Read More"
			description="Show/Hide the Read More button">
			<option
				value="0">Hide</option>
			<option
				value="1">Show</option>
		</field>
		<field
			name="item_title"
			type="list"
			default="0"
			label="Article Title"
			description="Show article title">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>
		<field
			name="items"
			type="text"
			default=""
			label="No. of Items"
			description="No of items to display" />
	</fields>
	<fields
		group="advanced">
		<field
			name="layout"
			type="modulelayout"
			label="JFIELD_ALT_LAYOUT_LABEL"
			description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
		<field
			name="moduleclass_sfx"
			type="text"
			default=""
			label="MODULES_FIELD_MODULECLASS_SFX_LABEL"
			description="MODULES_FIELD_MODULECLASS_SFX_DESC" />
		<field
			name="cache"
			type="list"
			default="1"
			label="MODULES_FIELD_CACHING_LABEL"
			description="MODULES_FIELD_CACHING_DESC">
			<option
				value="1">USE_GLOBAL</option>
			<option
				value="0">MODULES_FIELD_VALUE_NOCACHING</option>
		</field>
		<field
			name="cache_time"
			type="text"
			default="900"
			label="MODULES_FIELD_CACHE_TIME_LABEL"
			description="MODULES_FIELD_CACHE_TIME_DESC" />
	</fields>
</extension>
