				<option value="alpha">Title_Alphabetical</option>
				<option value="ralpha">Title_Reverse_Alphabetical</option>
				<option value="order">Category_Manager_Order</option>
		</field>
		
		<field 
			name="article_orderby" 
			type="list" 
			default="rdate" 
			label="Content_Attribs_Article_Order_Label" 
			description="Content_Attribs_Article_Order_Desc">
