			name="show_date"
			type="list"
			default="hide"
			label="CONTENT_ATTRIBS_SHOW_DATE_LABEL"
			description="CONTENT_ATTRIBS_SHOW_DATE_DESC">
				<option value="hide">JCommon_Hide</option>
				<option value="created">Created</option>
				<option value="modified">Modified</option>
				<option value="published">Published</option>
		</field>
		
