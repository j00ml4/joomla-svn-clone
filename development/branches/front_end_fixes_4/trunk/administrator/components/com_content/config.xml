				<option value="rdate">Most_recent_first</option>
				<option value="alpha">Title_Alphabetical</option>
				<option value="ralpha">Title_Reverse_Alphabetical</option>
				<option value="author">Author_Alphabetical</option>
				<option value="rauthor">Author_Reverse_Alphabetical</option>
				<option value="hits">Most_Hits</option>
				<option value="rhits">Least_Hits</option>
				<option value="order">Article_Manager_Order</option>
		</field>		

		<field 
			name="order_date" 
			type="list" 
			default="created" 
			label="Content_Attribs_Ordering_Date_Label" 
			description="Content_Attribs_Ordering_Date_Desc">
