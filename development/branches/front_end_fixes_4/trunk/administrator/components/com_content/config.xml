				<option value="10">J10</option>
				<option value="15">J15</option>
				<option value="20">J20</option>
				<option value="25">J25</option>
				<option value="30">J30</option>
				<option value="50">J50</option>
				<option value="100">J100</option>
				<option value="0">JALL</option>
		</field>
		
	 	<field 
			name="list_type" 
			type="radio" 
			default="hierarchy" 
			label="Content_Attribs_List_Type_Label" 
			description="Content_Attribs_List_Type_Desc">
	 			<option value="hierarchy">Multi_Level</option>
	 			<option value="flat">Single_Level</option>
	 	</field>

		<field
			name="show_headings"
			type="radio"
			default="1"
			label="CONTENT_ATTRIBS_SHOW_HEADINGS_LABEL"
