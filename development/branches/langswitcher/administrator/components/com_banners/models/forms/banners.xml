<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: manage.xml 16241 2010-04-20 10:51:25Z chdemko $ -->
<form>
	<fields name="filters">
		<fieldset name="search">
			<field type="search"
				name="expr"
				label="JSEARCH_FILTER_LABEL"
				description="JSEARCH_FILTER"
			/>
		</fieldset>
		<fieldset name="select">
			<field type="state"
				name="state"
				hidden="true"
				onchange="this.form.submit();"
			>
				<option value="">JOPTION_SELECT_PUBLISHED</option>
			</field>
			<field type="category"
				name="category"
				extension="com_banners"
				hidden="true"
				onchange="this.form.submit();"
			>
				<option value="">JOPTION_SELECT_CATEGORY</option>
				<option value="0">JOPTION_NO_CATEGORY</option>
			</field>
			<field type="bannerclient"
				name="client"
				hidden="true"
				onchange="this.form.submit();"
			>
				<option value="">COM_BANNERS_SELECT_CLIENT</option>
				<option value="0">COM_BANNERS_NO_CLIENT</option>
			</field>
			<field type="contentlanguage"
				name="language"
				default="-"
				hidden="true"
				onchange="this.form.submit();"
			>
				<option value="">JOPTION_SELECT_LANGUAGE</option>
				<option value="*">JOPTION_ALL_LANGUAGES</option>
				<option value="?">JOPTION_DEFAULT_LANGUAGE</option>
			</field>
		</fieldset>
	</fields>
</form>
