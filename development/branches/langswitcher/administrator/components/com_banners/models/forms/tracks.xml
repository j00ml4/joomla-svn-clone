<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: manage.xml 16241 2010-04-20 10:51:25Z chdemko $ -->
<form>
	<fields name="filters">
		<fieldset name="search">
			<field name="begin" type="calendar"
				description="COM_BANNERS_BEGIN_LABEL_DESC"
				filter="user_utc"
				format="%Y-%m-%d %H:%M:%S"
				label="COM_BANNERS_BEGIN_LABEL"
				size="16"
				onchange="this.form.submit();"
			/>
			<field name="end" type="calendar"
				description="COM_BANNERS_END_LABEL_DESC"
				filter="user_utc"
				format="%Y-%m-%d %H:%M:%S"
				label="COM_BANNERS_END_LABEL"
				size="16"
				onchange="this.form.submit();"
			/>
		</fieldset>
		<fieldset name="select">
			<field type="list"
				name="type"
				hidden="true"
				onchange="this.form.submit();"
			>
				<option value="">COM_BANNERS_SELECT_TYPE</option>
				<option value="1">COM_BANNERS_IMPRESSION</option>
				<option value="2">COM_BANNERS_CLICK</option>
			</field>
			<field type="category"
				name="category"
				extension="com_banners"
				hidden="true"
				onchange="this.form.submit();"
			>
				<option value="">JOPTION_SELECT_CATEGORY</option>
				<option value="0">JOPTION_NO_CATEGORY</option>
			</field>
			<field type="bannerclient"
				name="client"
				hidden="true"
				onchange="this.form.submit();"
			>
				<option value="">COM_BANNERS_SELECT_CLIENT</option>
			</field>
		</fieldset>
	</fields>
</form>
