<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fields>
		<field
			name="lang_id"
			type="hidden"
			default="0"
			required="true"
			readonly="true" />

		<field
			name="lang_code"
			type="text"
			class="inputbox"
			default=""
			size="10"
			maxlength="7"
			label="COM_LANGS_FIELD_LANG_CODE_LABEL"
			description="COM_LANGS_FIELD_LANG_CODE_DESC"
			required="true" />

		<field
			name="title"
			type="text"
			class="inputbox"
			default=""
			size="40"
			maxlength="50"
			label="COM_LANGS_FIELD_TITLE_LABEL"
			description="COM_LANGS_FIELD_TITLE_DESC"
			required="true" />

		<field
			name="title_native"
			type="text"
			class="inputbox"
			default=""
			size="40"
			maxlength="50"
			label="COM_LANGS_FIELD_TITLE_NATIVE_LABEL"
			description="COM_LANGS_FIELD_TITLE_NATIVE_DESC" />

		<field
			name="alias"
			type="text"
			class="inputbox"
			default=""
			size="40"
			label="COM_LANGS_FIELD_ALIAS_LABEL"
			description="COM_LANGS_FIELD_ALIAS_DESC" />

		<field
			id="description"
			name="description"
			type="textarea"
			class="inputbox"
			rows="5"
			cols="80"
			default=""
			label="COM_LANGS_FIELD_DESCRIPTION_LABEL"
			description="COM_LANGS_FIELD_DESCRIPTION_DESC" />

		<field
			name="published"
			type="list"
			label="COM_LANGS_FIELD_PUBLISHED_LABEL"
			description="COM_LANGS_FIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option
				value="1">
				JOPTION_PUBLISHED</option>
			<option
				value="0">
				JOPTION_UNPUBLISHED</option>
			<option
				value="-1">
				COM_LANGS_FIELD_VALUE_DISABLED</option>
			<option
				value="-2">
				JOPTION_TRASH</option>
		</field>
	</fields>
</form>