	<author>Joomla! Project</author>
	<creationDate>July 2010</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.6</version>
	<description>PLG_SYSTEM_LANGUAGESEF_XML_DESCRIPTION</description>
	<files>
		<filename plugin="languagesef">languagesef.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_content_languagesef.ini</language>
		<language tag="en-GB">en-GB.plg_content_languagesef.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="default_suffix" type="radio"
					default="1"
					description="PLG_SYSTEM_LANGUAGESEF_FIELD_DEFAULT_SUFFIX_DESC"
					label="PLG_SYSTEM_LANGUAGESEF_FIELD_DEFAULT_SUFFIX_LABEL"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
