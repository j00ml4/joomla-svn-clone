<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="All Weblinks Layout">
		<message>
			<![CDATA[This layout shows a list of all Web Links]]>
		</message>
	</layout>
	<state>
		<name>All Weblinks Layout</name>
		<description>This layout shows a list of all Web Links</description>
		<params>
			<param name="show_feed_link" type="radio" default="1" label="Show a feed link" description="PARAMSHOWFEEDLINK">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>

	 		<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="orderby_pri" type="list" default="" label="Category Order" description="Order items by category">
				<option value="">No, order by Primary Order only</option>
				<option value="alpha">Title Alphabetical</option>
				<option value="ralpha">Title Reverse-Alphabetical</option>
				<option value="order">Ordering</option>
			</param>
			<param name="orderby_sec" type="list" default="order" label="Primary Order" description="PARAMORDERBYSEC">
				<option value="date">Oldest first</option>
				<option value="rdate">Most recent first</option>
				<option value="alpha">Title Alphabetical</option>
				<option value="ralpha">Title Reverse-Alphabetical</option>
				<option value="hits">Most Hits</option>
				<option value="rhits">Least Hits</option>
				<option value="order">Ordering</option>
			</param>
		</params>
	</state>
</metadata>