<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>Comments - Comments</name>
	<version>1.2.1 Beta 1</version>
	<creationDate>9 May 2009</creationDate>
	<author>JXtended</author>
	<authorEmail>info@jxtended.com</authorEmail>
	<authorUrl>http://jxtended.com</authorUrl>
	<copyright>Copyright (C) 2008 - 2009 JXtended, LLC. All rights reserved.</copyright>
	<license>GNU General Public License</license>
	<description>COMMENTS_MOD_COMMENT_DESC</description>
	<files>
		<filename module="mod_social_comment">mod_social_comment.php</filename>
		<filename>index.html</filename>
		<filename>view.php</filename>
		<folder>tmpl</folder>
	</files>
	<params addpath="/administrator/components/com_comments/models/elements">
		<param name="limit" type="text" default="5" label="COMMENTS_LIMIT" description="COMMENTS_LIMIT_DESC" />
		<param name="order" type="list" default="0" label="COMMENTS_ORDERING" description="COMMENTS_ORDERING_DESC">
			<option value="">COMMENTS_NONE</option>
			<option value="title_asc">COMMENTS_TITLE_ASCENDING</option>
			<option value="created_asc">COMMENTS_OLDEST_FIRST</option>
			<option value="created_dsc">COMMENTS_NEWEST_FIRST</option>
		</param>
		<param name="autodetect" type="radio" default="0" label="COMMENTS_AUTODETECT_THREAD" description="COMMENTS_AUTODETECT_THREAD_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="0" label="COMMENTS_CACHING" description="COMMENTS_CACHING_DESC">
			<option value="1">COMMENTS_USE_GLOBAL</option>
			<option value="0">COMMENTS_NO_CACHING</option>
		</param>
		<param name="cache_time" type="text" default="900" label="COMMENTS_CACHE_TIME" description="COMMENTS_CACHE_TIME_DESC" />
	</params>
</install>