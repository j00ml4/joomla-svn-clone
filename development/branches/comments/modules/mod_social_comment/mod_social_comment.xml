<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>Comments - Comments</name>
	<author>Joomla! Project</author>
	<creationDate>April 2010</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters.
		All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see
		LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.6.0</version>
	<description>COMMENTS_MOD_COMMENT_DESC</description>
	<files>
		<filename module="mod_social_comment">mod_social_comment.php
		</filename>
		<filename>index.html</filename>
		<filename>view.php</filename>
		<folder>tmpl</folder>
	</files>
	<fields name="params"
		addpath="/administrator/components/com_social/models/elements"
	>
		<fieldset name="basic">

			<field name="limit" type="text" default="5"
				label="COMMENTS_LIMIT" description="COMMENTS_LIMIT_DESC" />
			<field name="order" type="list" default="0"
				label="COMMENTS_ORDERING" description="COMMENTS_ORDERING_DESC"
			>
				<option value="">COMMENTS_NONE</option>
				<option value="title_asc">COMMENTS_TITLE_ASCENDING</option>
				<option value="created_asc">COMMENTS_OLDEST_FIRST</option>
				<option value="created_dsc">COMMENTS_NEWEST_FIRST</option>
			</field>
			<field name="autodetect" type="radio" default="0"
				label="COMMENTS_AUTODETECT_THREAD" description="COMMENTS_AUTODETECT_THREAD_DESC"
			>
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
		</fieldset>
		<fieldset name="advanced">

			<field name="moduleclass_sfx" type="text" default=""
				label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
				description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			<field name="cache" type="list" default="1"
				label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC"
			>
				<option value="1">JGLOBAL_USE_GLOBAL</option>
				<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING
				</option>
			</field>
			<field name="cache_time" type="text" default="900"
				label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
		</fieldset>
	</fields>
</install>