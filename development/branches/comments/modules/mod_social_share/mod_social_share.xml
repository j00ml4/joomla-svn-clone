<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>Comments - Sharing</name>
	<author>Joomla! Project</author>
	<creationDate>April 2010</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.6.0</version>
	<description>COMMENTS_MOD_SHARE_DESC</description>
	<files>
		<filename module="mod_social_share">mod_social_share.php</filename>
		<filename>index.html</filename>
		<filename>share.ini</filename>
		<filename>helper.php</filename>
		<folder>images</folder>
		<folder>tmpl</folder>
	</files>
	<params addpath="/administrator/components/com_social/models/elements">
		<param name="style" type="list" default="0" label="COMMENTS_ICON_STYLE" description="COMMENTS_ICON_STYLE_DESC">
			<option value="0">COMMENTS_ICONS_ONLY</option>
			<option value="1">COMMENTS_ICONS_AND_TEXT</option>
			<option value="2">COMMENTS_TEXT_ONLY</option>
		</param>
		<param name="heading" type="list" default="0" label="COMMENTS_SHARE_HEADING" description="COMMENTS_SHARE_HEADING_DESC">
			<option value="0">COMMENTS_DO_NOT_SHOW</option>
			<option value="1">COMMENTS_ICON_ONLY</option>
			<option value="2">COMMENTS_ICON_AND_TEXT</option>
			<option value="3">COMMENTS_TEXT_ONLY</option>
		</param>
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="0" label="COMMENTS_CACHING" description="COMMENTS_CACHING_DESC">
			<option value="1">COMMENTS_USE_GLOBAL</option>
			<option value="0">COMMENTS_NO_CACHING</option>
		</param>
		<param name="cache_time" type="text" default="900" label="COMMENTS_CACHE_TIME" description="COMMENTS_CACHE_TIME_DESC" />
	</params>
</install>