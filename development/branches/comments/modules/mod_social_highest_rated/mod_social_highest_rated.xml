<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>Comments - Highest Rated Items</name>
	<author>Joomla! Project</author>
	<creationDate>April 2010</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.6.0</version>
	<description>COMMENTS_MOD_HIGHEST_RATED_DESC</description>
	<files>
		<filename module="mod_social_highest_rated">mod_social_highest_rated.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<params addpath="/administrator/components/com_social/elements">
		<param name="context" type="context" default="" label="COMMENTS_CONTEXT" description="COMMENTS_CONTEXT_DESC" />
		<param name="limit" type="text" default="5" label="COMMENTS_LIMIT" description="COMMENTS_LIMIT_DESC" size="3" />
		<param name="show_rating_stars" type="radio" default="1" label="COMMENTS_RATINGS_SHOW_STARS" description="COMMENTS_RATINGS_SHOW_STARS_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="show_rating_text" type="radio" default="1" label="COMMENTS_RATINGS_SHOW_TEXT" description="COMMENTS_RATINGS_SHOW_TEXT_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="0" label="COMMENTS_CACHING" description="COMMENTS_CACHING_DESC">
			<option value="1">COMMENTS_USE_GLOBAL</option>
			<option value="0">COMMENTS_NO_CACHING</option>
		</param>
		<param name="cache_time" type="text" default="900" label="COMMENTS_CACHE_TIME" description="COMMENTS_CACHE_TIME_DESC" />
	</params>
</install>