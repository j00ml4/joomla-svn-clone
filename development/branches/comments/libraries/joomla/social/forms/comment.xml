<?xml version="1.0" encoding="utf-8"?>
	<!--
		$Id$
	-->
<form>
	<fieldset>
		<field name="name" type="text"
			description="MOD_SOCIAL_COMMENT_FIELD_NAME_DESC"
			label="MOD_SOCIAL_COMMENT_FIELD_NAME_LABEL"
		/>

		<field name="email" type="text"
			description="MOD_SOCIAL_COMMENT_FIELD_EMAIL_DESC"
			label="MOD_SOCIAL_COMMENT_FIELD_EMAIL_LABEL"
			validate="email"
		/>

		<field name="url" type="text"
			description="MOD_SOCIAL_COMMENT_FIELD_URL_DESC"
			label="MOD_SOCIAL_COMMENT_FIELD_URL_LABEL"
		/>

		<field name="subject" type="text"
			description="MOD_SOCIAL_COMMENT_FIELD_SUBJECT_DESC"
			label="MOD_SOCIAL_COMMENT_FIELD_SUBJECT_LABEL"
			filter="string"
		/>

		<field name="body" type="textarea"
			cols="50"
			description="MOD_SOCIAL_COMMENT_FIELD_BODY_DESC"
			label="MOD_SOCIAL_COMMENT_FIELD_BODY_LABEL"
			rows="5"
			required="true"
		/>

		<field name="context" type="hidden" filter="cmd" />
		<field name="redirect" type="hidden" filter="base64" />
	</fieldset>
</form>
