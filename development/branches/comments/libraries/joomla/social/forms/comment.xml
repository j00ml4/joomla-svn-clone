		<field name="email" type="text" class="inputbox"
			label="MOD_SOCIAL_COMMENT_FIELD_EMAIL_LABEL" description="MOD_SOCIAL_COMMENT_FIELD_EMAIL_DESC" />

		<field name="url" type="text" class="inputbox"
