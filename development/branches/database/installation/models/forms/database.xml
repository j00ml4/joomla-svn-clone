<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fieldset>
		<fieldset name="basic">
			<field name="db_type" type="list" id="db_type" class="inputbox"
				label="Instl_Database_Type_Label"
				default="mysql"
				required="true"
			>
				<option value="mysql">MySQL</option>
				<option value="mysqli">MySQLi</option>
				<option value="oracle">Oracle</option>
				<option value="sqlsrv">MSSQL</option>
				<option value="postgresql">PSQL</option>
				<option value="sybasemssql">Sybasesql</option>
				<option value="cassandra">Cassandra</option>
				<option value="mongodb">Mongodb</option>

				</field>
			<field name="db_host" type="text" id="db_host" class="inputbox"
				label="Instl_Database_Host_Label"
				description="Instl_Database_Host_Desc"
				default="localhost"
				required="true"
			/>

			<field name="db_slave_host" type="text" id="db_slave_host" class="inputbox"
				label="Instl_Database_Slave_Host_Label"
				description="Instl_Database_Slave_Host_Desc"
				default="localhost"
				required="true"
			/>

			<field name="db_user" type="text" id="db_user" class="inputbox"
				label="Instl_Database_User_Label"
				description="Instl_Database_User_Desc"
				default=""
				required="true"
			/>

			<field name="db_slave_user" type="text" id="db_slave_user" class="inputbox"
				label="Instl_Database_Slave_User_Label"
				description="Instl_Database_Slave_User_Desc"
				default=""
				required="true"
			/>
			<field name="db_pass" type="password" id="db_pass" class="inputbox"
				label="Instl_Database_Password_Label"
				description="Instl_Database_Password_Desc"
				default=""
			/>

			<field name="db_slave_pass" type="password" id="db_slave_pass" class="inputbox"
				label="Instl_Database_Slave_Password_Label"
				description="Instl_Database_Slave_Password_Desc"
				default=""
			/>
			<field name="db_name" type="text" id="db_name" class="inputbox"
				label="Instl_Database_Name_Label"
				description="Instl_Database_Name_Desc"
				default=""
				required="true"
			/>
		</fieldset>

		<!-- Advanced Settings -->
		<fieldset name="advanced">
			<field name="db_old" type="radio" id="db_old" class="inputbox"
				label="Instl_Old_Database_Process_Label"
				default="backup"
				required="true"
			>
				<option value="remove">Remove</option>
				<option value="backup">Backup</option>
			</field>
			<field name="db_prefix" type="text" id="db_prefix" class="inputbox"
				label="Instl_Database_Prefix_Label"
				description="Instl_Database_Prefix_Desc"
				default="jos_"
				required="true"
			/>
		</fieldset>
	</fieldset>
</form>