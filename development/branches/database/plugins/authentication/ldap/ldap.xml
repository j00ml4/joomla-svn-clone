<?xml version="1.0" encoding="utf-8"?>
<install
	version="1.6"
	type="plugin"
	group="auth">
	<name>Authentication - LDAP</name>
	<author>Joomla! Project</author>
	<creationDate>November 2005</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.5</version>
	<description>Handles user authentication against an LDAP server</description>
	<files>
		<filename
			plugin="ldap">ldap.php</filename>
	</files>
	<fields>
		<field
			name="host"
			type="text"
			size="20"
			default=""
			label="Host"
			description="fieldLDAPHOST" />

		<field
			name="port"
			type="text"
			size="20"
			default="389"
			label="Port"
			description="fieldLDAPPORT" />

		<field
			name="use_ldapV3"
			type="radio"
			default="0"
			label="LDAP V3"
			description="fieldLDAPV3">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>

		<field
			name="negotiate_tls"
			type="radio"
			default="0"
			label="Negotiate TLS"
			description="fieldNEGOCIATETLS">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>

		<field
			name="no_referrals"
			type="radio"
			default="0"
			label="Follow referrals"
			description="fieldFOLLOW">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>

		<field
			name="auth_method"
			default="bind"
			type="list"
			label="Authorization Method"
			description="fieldAUTHMETHOD">
			<option
				value="search">Bind and Search</option>
			<option
				value="bind">Bind Directly As User</option>
		</field>

		<field
			name="base_dn"
			type="text"
			size="20"
			default=""
			label="Base DN"
			description="fieldBASEDN" />

		<field
			name="search_string"
			type="text"
			size="20"
			default=""
			label="Search string"
			description="fieldSEARCHSTRING" />

		<field
			name="users_dn"
			type="text"
			size="20"
			default=""
			label="Users DN"
			description="fieldUSERSDN" />

		<field
			name="spacer1"
			type="spacer"
			hr="true" 
			/>

		<field
			name="username"
			type="text"
			size="20"
			default=""
			label="Connect username"
			description="fieldCONNECTSTRING" />

		<field
			name="password"
			type="password"
			size="20"
			default=""
			label="Connect password"
			description="fieldCONNECTPASSWORD" />

		<field
			name="spacer2"
			type="spacer"
			hr="true" 
			/>

		<field
			name="ldap_fullname"
			type="text"
			size="20"
			default="fullName"
			label="Map FullName"
			description="fieldMAPFN" />

		<field
			name="ldap_email"
			type="text"
			size="20"
			default="mail"
			label="Map Email"
			description="fieldMAPEMAIL" />

		<field
			name="ldap_uid"
			type="text"
			size="20"
			default="uid"
			label="Map User ID"
			description="fieldMAPUID" />
	</fields>
</install>
