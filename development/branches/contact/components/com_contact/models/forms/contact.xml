<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="contact">
		<field name="name" type="text" 
		 id="contact-formname" 
		 size="30" 
		 class="inputbox" 
		 required="true"
		/>

		<field name="email_to" 
			type="hidden"
			description="CONTACT_INFORMATION_EMAIL_DESC"
			label="CONTACT_INFORMATION_EMAIL_LABEL"
			size="30"			
		/>

		<field name="contact-email" 
			type="text"
			id="contact-emailmsg"
			size="30"
			description="CONTACT_EMAIL_DESC"
			label="JGLOBAL_EMAIL"
			filter="string"
			validate="email"
			required="true"
		/>
		<field name="contact-subject" 
			type="text"
			id="contact-emailmsg"
			size="30"
			description="COM_CONTACT_CONTACT_MESSAGE_SUBJECT_DESC"
			label="COM_CONTACT_CONTACT_MESSAGE_SUBJECT_DESC"
			filter="string"
			required="true"
		/>
		<field name="contact-subject" 
			type="text"
			id="contact-emailmsg"
			size="30"
			description="COM_CONTACT_CONTACT_MESSAGE_SUBJECT_DESC"
			label="COM_CONTACT_CONTACT_MESSAGE_SUBJECT_DESC"
			filter="string"
			required="true"
		/>
		<field name="contact-text" 
			type="textarea"
			id="contact-emailmsg"
			cols="50"
			rows="10"
			description="COM_CONTACT_CONTACT_MESSAGE_TEXT_DESC"
			label="COM_CONTACT_CONTACT_MESSAGE_TEXT_DESC"
			filter="string"
			required="true"
		/>
		<field name="email_copy" 
			type="checkbox"
			id="contact-email-copy"
			description="COM_CONTACT_CONTACT_EMAIL_A_COPY_DESC"
			label="COM_CONTACT_CONTACT_EMAIL_A_COPY_LABEL"
			default="1"
		/>		

		</fieldset>

</form>
