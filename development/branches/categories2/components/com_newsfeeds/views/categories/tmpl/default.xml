				description="COM_NEWSFEEDS_FIELD_SHOW_CHILDREN_DESC"
				label="COM_NEWSFEEDS_FIELD_SHOW_CHILDREN_LABEL"
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field name="max_levels" type="text"
				description="COM_NEWSFEEDS_FIELD_MAX_LEVELS_DESC"
				label="COM_NEWSFEEDS_FIELD_MAX_LEVELS_LABEL"
				default="0"
				size="6"
			/>
			<field name="show_empty_categories" type="list"
				description="COM_NEWSFEEDS_FIELD_SHOW_EMPTY_CATEGORIES_DESC"
				label="COM_NEWSFEEDS_FIELD_SHOW_EMPTY_CATEGORIES_LABEL"
