				description="COM_NEWSFEEDS_FIELD_CATEGORIES_DESC_DESC"
				label="COM_NEWSFEEDS_FIELD_CATEGORIES_DESC_LABEL"
				cols="25"
				rows="5"
			/>
		</fieldset>

		<!-- Feed options. -->
		<fieldset name="feed"
			description="COM_NEWSFEEDS_FIELD_FEED_OPTIONS_DESC"
			label="COM_NEWSFEEDS_FIELD_FEED_OPTIONS_LABEL"
		>

			<field name="show_feed_image" type="list"
				description="COM_NEWSFEEDS_FIELD_SHOW_FEED_IMAGE_DESC"
				label="COM_NEWSFEEDS_FIELD_SHOW_FEED_IMAGE_LABEL"
