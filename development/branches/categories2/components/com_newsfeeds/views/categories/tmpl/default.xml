				description="COM_NEWSFEEDS_FIELD_SHOW_ITEM_COUNT_DESC"
				label="COM_NEWSFEEDS_FIELD_SHOW_ITEM_COUNT_LABEL"
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
