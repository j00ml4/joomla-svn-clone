<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="com_weblinks_categories_view_default_title">
		<message>
			<![CDATA[com_weblinks_categories_view_default_desc]]>
		</message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request" label="COM_MENUS_BASIC_FIELDSET_LABEL" description="">

			<field name="id" type="category"
				description="CHOOSE_CATEGORY_DESC"
				extension="com_weblinks"
				label="CHOOSE_CATEGORY_LABEL"
				show_root="true"
				required="true"
			/>
		</fieldset>
	</fields>

	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params">

		<!-- Basic options. -->
		<fieldset name="advanced">

			<field name="show_headings" type="list"
				description="COM_WEBLINKS_FIELD_TABLE_HEADINGS_DESC"
				label="COM_WEBLINKS_FIELD_TABLE_HEADINGS_LABEL"
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="show_name" type="list"
				description="COM_WEBLINKS_FIELD_NAME_COLUMN_DESC"
				label="COM_WEBLINKS_FIELD_NAME_COLUMN_LABEL"
