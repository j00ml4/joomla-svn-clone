			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field name="max_levels" type="text"
				description="COM_WEBLINKS_FIELD_MAX_LEVELS_DESC"
				label="COM_WEBLINKS_FIELD_MAX_LEVELS_LABEL"
				default="0"
				size="6"
			/>
