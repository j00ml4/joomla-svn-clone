<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fieldset>
		<field name="lang_id" type="hidden"
			default="0"
			required="true"
			readonly="true"
		/>

		<field name="lang_code" type="text"
			class="inputbox"
			description="COM_LANGS_FIELD_LANG_CODE_DESC"
			label="COM_LANGS_FIELD_LANG_CODE_LABEL"
			maxlength="7"
			required="true"
			size="10"
		/>

		<field name="title" type="text"
			class="inputbox"
			description="COM_LANGS_FIELD_TITLE_DESC"
			label="COM_LANGS_FIELD_TITLE_LABEL"
			maxlength="50"
			required="true"
			size="40"
		/>

		<field name="title_native" type="text"
			class="inputbox"
			description="COM_LANGS_FIELD_TITLE_NATIVE_DESC"
			label="COM_LANGS_FIELD_TITLE_NATIVE_LABEL"
			maxlength="50"
			size="40"
		/>

		<field name="alias" type="text"
			class="inputbox"
			description="COM_LANGS_FIELD_ALIAS_DESC"
			label="COM_LANGS_FIELD_ALIAS_LABEL"
			size="40"
		/>

		<field name="description" type="textarea"
			class="inputbox"
			cols="80"
			description="COM_LANGS_FIELD_DESCRIPTION_DESC"
			label="COM_LANGS_FIELD_DESCRIPTION_LABEL"
			rows="5"
		/>

		<field name="published" type="list"
			class="inputbox"
			default="1"
			description="COM_LANGS_FIELD_PUBLISHED_DESC"
			label="COM_LANGS_FIELD_PUBLISHED_LABEL"
			size="1"
		>
			<option value="1">JOPTION_PUBLISHED</option>
			<option value="0">JOPTION_UNPUBLISHED</option>
			<option value="-1">COM_LANGS_FIELD_VALUE_DISABLED</option>
			<option value="-2">JOPTION_TRASH</option>
		</field>
	</fieldset>
</form>