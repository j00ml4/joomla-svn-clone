<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Simple Media Form">
		<message>
			Form to add new media items
		</message>
	</layout>
	<state>
		<name>Simple Media Form</name>
		<description>Form to add new media items</description>
		
		<params>
			<!-- From Remote server -->
			<param name="allow_remoteurl" type="radio" default="1" label="Add video by Remote URL" description="Add video by remote server URL">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>				
			
			<!-- Upload file -->
			<param name="@spacer" type="spacer" label="" default="" /> 				
			<param name="allow_localupload" type="radio" default="0" label="Add video by local Upload" description="Add video by file Upload">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>
			<param type="text" name="toFolder" label="Upload to Folder" default="images/" description="Used only, when uploadig to local server" />					
			<param type="text" name="maxfilesize" label="Max File Size (KB)" default="500" description="Used only, when uploadig to local server" />					
			
			<!--TODO Youtube Upload -->
			<!--param name="@spacer" type="spacer" label="" default="" /> 		
			<param type="text" name="youtube_login" label="Youtube Login (email)" default="" description="Email (Login) to add you tube videos" />					
			<param type="password" name="youtube_password" label="Youtube Password" default="" description="Password to add youtube videos" />		
			<param name="allow_youtubeupload" type="radio" default="0" label="Add video by youtube Upload" description="Add video by file Upload to youtube server">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param-->
		</params>		
	</state>
</metadata>