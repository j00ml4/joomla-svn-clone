<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Gallery Layout">
		<message>
			<![CDATA[STANDARD CATEGORY LAYOUT DESC]]>
		</message>
	</layout>
	<state>
		<name>Gallery Layout</name>
		<description>STANDARD CATEGORY LAYOUT DESC</description>
		<url>
			<param name="catid" type="category" label="Category" section="com_mediagalleries" description="Choose a category (optional)" />
			<param name="ordermode" type="list" default="0" label="Ordering Mode" description="Select items ordering">
				<option value="popular">Most Popular</option>
				<option value="random">Random</option>			
				<option value="ordering">Ordering</option>		
				<option value="newer">Newer</option>
				<option value="toprated">Top Rated</option>
			</param>
			<param name="filter_state" type="list" default="P" label="State" description="Show/Hide the Filter ability">
				<option value="P">published</option>
				<option value="U">unpublished</option>
				<option value="A">All</option>
			</param>			
		</url>
		<params>
			<param name="limit" type="text" size="3" default="30" label="Count" description="The number of items to display (default 30)" />						
		</params>
		<advanced>
			<param name="filter_order" type="radio" default="1" label="Order Filter" description="Show/Hide the Order by Filter">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>	
			<param name="filter_category" type="radio" default="1" label="Categories Filter" description="Show/Hide the Category List Filter ability">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="filter" type="radio" default="1" label="Filter" description="Show/Hide the Filter ability">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="filter_type" type="list" default="title" label="Filter Field" description="Which field shall the filter apply to">
				<option value="title">Title</option>
				<option value="author">Author</option>
				<option value="hits">Hits</option>
			</param>
			
			<!-- Pagination -->
			<param name="@spacer" type="spacer" label="" default="" /> 		
			<param name="show_pagination" type="radio" default="1" label="Pagination" description="Show/Hide Pagination support">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="show_pagination_limit" type="radio" default="0" label="Display Count" description="Show/Hide the Display Select Count dropdown">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>

			<param name="@spacer" type="spacer" label="" default="" /> 		
			<param name="show_feed_link" type="radio" default="1" label="Show a feed link" description="PARAMSHOWFEEDLINK">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>
			
			<param name="@spacer" type="spacer" label="" default="" /> 		
			<param name="date_format" type="text" size="15" default="" label="Date Format" description="PARAMDATEFORMAT" />			
		</advanced>
	</state>
</metadata>