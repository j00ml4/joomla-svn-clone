<?xml version="1.0" encoding="utf-8"?>
<install version="1.6" type="plugin" group="content">
	<name>plg_content_media</name>
	<author>Aman Gautam, Marcelo Eden</author>
	<creationDate>May 2010</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>amangautam@ymail.com</authorEmail>
	<authorUrl>www.3den.org</authorUrl>
	<version>1.0</version>
	<description>PLG_MEDIA_XML_DESCRIPTION</description>

	<files>
		<filename plugin="media">media.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
		<folder>media</folder>
	</files>
	<languages folder="language">
		<!-- Make everything multilanguage -->
		<language tag="en-GB">en-GB.plg_content_media.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<!-- Make everything multilanguage -->
				<field name="defaultdir" 
					type="text" 
					size="20" 
					default="images/stories/" 
					label="PLG_CONTENT_PAGEBREAK_DEFAULT_DIR_LABEL"
					description="PLG_CONTENT_PAGEBREAK_DEFAULT_DIR_DESC" />
				
				<field name="width" 
					type="text" 
					size="5" 
					default="400" 
					label="PLG_CONTENT_PAGEBREAK_WIDTH_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_WIDTH_DESC"/>
				
				
				<field name="height" 
					type="text" 
					size="5" 
					default="340" 
					label="PLG_CONTENT_PAGEBREAK_HEIGHT_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_HEIGHT_DESC"/>
				
				<field name="autostart" 
					type="radio" 
					default="0" 
					label="PLG_CONTENT_PAGEBREAK_AUTOSTART_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_AUTOSTART_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>


			<fieldset name="advanced">		
				<!--Media Players -->
				<field name="flv_player" 
					type="list" 
					default="2kplayer" 
					label="PLG_CONTENT_PAGEBREAK_FLV_PLAYER_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_FLV_PLAYER_DESC">
						
						<option value="jwplayer">PLG_CONTENT_PAGEBREAK_FLV_PLAYER_JWPPLAYER</option>			
						<option value="2kplayer">PLG_CONTENT_PAGEBREAK_FLV_PLAYER_3K_FLV_PLAYER</option>
				
				</field>
				
				<field name="mp3_player" 
					type="list" 
					default="1pixelout" 
					label="PLG_CONTENT_PAGEBREAK_MP3_PLAYER_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_MP3_PLAYER_DESC" >
						
						<option value="jwplayer">PLG_CONTENT_PAGEBREAK_MP3_PLAYER_JWPLAYER</option>			
						<option value="1pixelout">PLG_CONTENT_PAGEBREAK_MP3_PLAYER_1PIXELOUT</option>
				
				</field>
				
				<!--Youtube API-->
				<field name="@spacer" 
					type="spacer" 
					default="" 
					label="" 
					description="" />
				
				<field name="youtube_rel" 
					type="radio" 
					default="1" 
					label="PLG_CONTENT_PAGEBREAK_YOUTUBE_RELATED_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_YOUTUBE_RELATED_DESC" >
						
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				
				</field>
				
				<field name="youtube_loop" 
					type="radio" 
					default="0" 
					label="PLG_CONTENT_PAGEBREAK_YOUTUBE_LOOP_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_YOUTUBE_LOOP_DESC" >
						
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				
				</field>
				
				<field name="youtube_disablekb" 
					type="radio" 
					default="0" 
					label="PLG_CONTENT_PAGEBREAK_YOUTUBE_DISABLE_KEYBOARD_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_YOUTUBE_DISABLE_KEYBOARD_DESC" >
						
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				
				</field>
				
				<field name="youtube_egm" 
					type="radio" 
					default="0" 
					label="PLG_CONTENT_PAGEBREAK_YOUTUBE_ENHANCED_GENIE_MENU_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_YOUTUBE_ENHANCED_GENIE_MENU_DESC">
						
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				
				</field>
				
				<field name="youtube_border" 
				type="radio" 
				default="0" 
				label="PLG_CONTENT_PAGEBREAK_YOUTUBE_BORDER_LABEL" 
				description="PLG_CONTENT_PAGEBREAK_YOUTUBE_BORDER_DESC">
						
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				
				</field>
				
				<field name="youtube_color1" 
					type="text" 
					size="6" 
					default="CCCCCC" 
					label="PLG_CONTENT_PAGEBREAK_YOUTUBE_COLOR1_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_YOUTUBE_COLOR1_DESC">
				</field>
				
				<field name="youtube_color2" 
					type="text" 
					size="6" 
					default="CCCCCC" 
					label="PLG_CONTENT_PAGEBREAK_YOUTUBE_COLOR2_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_YOUTUBE_COLOR2_DESC">
				</field>
				
				<!--JW-->
				
				<field name="@spacer"
				 	type="spacer" 
					default="" 
					label="" 
					description=""
				/>
				
				<field name="jw_logo" 
					type="imagelist" 
					default="" 
					label="PLG_CONTENT_PAGEBREAK_JW_LOGO_LABEL" 
					directory="images" 
					exclude="" 
					stripext="" 
					description="PLG_CONTENT_PAGEBREAK_JW_LOGO_DESC" />
				
				<field name="jw_backcolor" 
					type="text" 
					size="6" 
					default="FFFFFF" 
					label="PLG_CONTENT_PAGEBREAK_JW_BACKCOLOR_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_JW_BACKCOLOR_DESC" />
				
				<field name="jw_frontcolor" 
					type="text" 
					size="6" 
					default="000000" 
					label="PLG_CONTENT_PAGEBREAK_JW_FRONTCOLOR_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_JW_FRONTCOLOR_DESC"/>
				
				<field name="jw_lightcolor" 
					type="text" 
					size="6" 
					default="000000" 
					label="PLG_CONTENT_PAGEBREAK_JW_LIGHTCOLOR_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_JW_LIGHTCOLOR_DESC"/>
				
				<field name="jw_screencolor" 
					type="text" 
					size="6" 
					default="000000" 
					label="PLG_CONTENT_PAGEBREAK_JW_SCREENCOLOR_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_JW_SCREENCOLOR_DESC"/>
				
				<field name="jw_quality" 
					type="radio" 
					default="1" 
					label="PLG_CONTENT_PAGEBREAK_JW_QUALITY_LABEL" 
					description="PLG_CONTENT_PAGEBREAK_JW_QUALITY_DESC">
					<option value="0">PLG_CONTENT_PAGEBREAK_NORMAL</option>
					<option value="1">PLG_CONTENT_PAGEBREAK_HIGH</option>
				</field>
			</fieldset>
		</fields>
	</config>
</install>
