<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0">
	<name>MediaGalleries</name>
	<creationDate>June 2010</creationDate>
	<author>Aman Gautam, Marcelo Eden</author>
	<copyright>(C) 2010 Joomla. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<version>1.0</version>
	<description>Media Galleries Component For Joomla 1.6</description>
	
	
	<!-- Custom Install Script to execute -->
	<installfile>install.mediagalleries.php</installfile>
	<!-- Custom Uninstall Script to execute -->
	<uninstallfile>uninstall.mediagalleries.php</uninstallfile>
	
	<install> <!-- Runs on install -->
		    <sql>
		            <file driver="mysql" charset="utf8">sql/install.mysql.sql</file>
		    </sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		    <sql>
		            <file driver="mysql" charset="utf8">sql/uninstall.mysql.sql</file>
		    </sql>
	</uninstall>
	<update> <!-- Runs on update -->
		    <sql>
		            <file driver="mysql" charset="utf8">sql/update.mysql.sql</file>
		    </sql>
	</update>
	
	<!-- Site Main File Copy Section -->
	<files folder="site">
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<folder>helpers</folder>
		<folder>assets</folder>
		<folder>models</folder>				
		<folder>views</folder>
		<folder>sh404plugin</folder> <!-- To be reviewed!!! -->>
	</files>
	
	<languages folder="site/language">
		<language tag="en-GB">en-GB.com_mediagalleries.ini</language>
		<language tag="pt-BR">pt-BR.com_mediagalleries.ini</language>
	</languages>

	<administration>
		    <menu link="index.php?option=com_mediagalleries">Media Galleries</menu> 
		    <submenu>
		           	<menu img="" view="mediagalleries">Media</menu>
					<menu img="" link="option=com_categories&amp;section=com_mediagalleries">Categories</menu>
					<menu img="" link="option=com_comments&amp;section=com_mediagalleries">Comments</menu>
		    </submenu>  
		    
		    <!-- Admin's Files -->
		    <files folder="admin">
				<filename component="mediagalleries">mediagalleries.php</filename>
				<filename>controller.php</filename>
				<filename>config.xml</filename>
				<filename>index.html</filename>	
				<folder>help</folder>
				<folder>tables</folder>
				<folder>models</folder>
				<folder>views</folder>
				<!-- Install files -->
				<filename>sql/install.mysql.sql</filename>
      			<filename>sql/uninstall.mysql.sql</filename>
      			<filename>install.mediagalleries.php</filename>
				<filename>uninstall.mediagalleries.php</filename>			
			
			</files>
	    	
	    	<languages folder="admin/language">
				<language tag="en-GB">en-GB.com_mediagalleries.ini</language>
			</languages>
			
	</administration>
</extension>
