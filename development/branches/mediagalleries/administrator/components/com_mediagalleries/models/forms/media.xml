<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field 
			name="id" 
			type="text" 
			default="0" 
			label="JGLOBAL_FIELD_ID_LABEL" 
			required="true"
			readonly="true" 
			class="readonly" 
		/>
		<field 
			name="votes" 
			type="text" 
			default="0" 
			label="votes" 
			description="Votes"
			readonly="true" 
			class="readonly" 
		/>
		

		<field 
			name="title" 
			type="text" 
			class="inputbox"
			size="40" 
			label="JGLOBAL_TITLE"
			description="COM_WEBLINKS_FIELD_TITLE_DESC" 
			required="true" 
		/>

		<field 
			name="alias" 
			type="text" 
			class="inputbox"
			size="40" 
			label="alias"
			description="COM_WEBLINKS_FIELD_ALIAS_DESC" 
		/>

		<field 
			name="catid" 
			type="category" 
			extension="com_mediagalleries"
			label="JCATEGORY" 
			description="category"
			class="inputbox"
			required="true">
			<option>JOPTION_NO_CATEGORY</option>
		</field>

		<field 
			name="url" 
			type="text" 
			class="inputbox"
			size="40" 
			label="url"
			description="COM_WEBLINKS_FIELD_URL_DESC" 
			required="true"
		/>

		<field 
			name="description" 
			type="editor" 
			buttons="true" 
			hide="pagebreak,readmore"
			class="inputbox"
			label="description" 
			description="COM_WEBLINKS_FIELD_DESCRIPTION_DESC" 
		/>

		
		<field 
			name="added" 
			type="Date" 
			class="inputbox"
			label="WEBLINKS_DATE_LABEL" 
			description="WEBLINKS_DATE_DESC"
			filter="safehtml" 
		/>
	
		<field 
			name="hits" 
			type="Text" 
			class="inputbox"
			size="6" 
			label="WEBLINKS_HITS_LABEL"
			description="WEBLINKS_HITS_DESC" 
			readonly="true" 
			filter="unset" 
			default="0"
		/>


		<field
			name="state"
			type="list"
			label="JGLOBAL_STATE"
			description="COM_WEBLINKS_FIELD_STATE_DESC"
			class="inputbox"
			size="1"
			default="1">
				<option	value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
				<option value="2">JARCHIVED</option>
				<option value="-3">COM_WEBLINKS_FIELD_VALUE_REPORTED</option>
				<option value="-2">JTRASH</option>
		</field>
		
		<field
			name="published"
			type="list"
			label="published"
			description="COM_WEBLINKS_FIELD_STATE_DESC"
			class="inputbox"
			size="1"
			default="1">
				<option	value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
				<option value="2">JARCHIVED</option>
				<option value="-3">COM_WEBLINKS_FIELD_VALUE_REPORTED</option>
				<option value="-2">JTRASH</option>
		</field>

		<field 
			name="ordering" 
			type="Ordering" 
			class="inputbox"
			label="COM_WEBLINKS_FIELD_ORDERING_LABEL"
			description="COM_WEBLINKS_FIELD_ORDERING_DESC" 
		/>

		<field 
			name="access" 
			type="accesslevel" 
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC" 
			class="inputbox" 
			size="1" 
		/>

		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="COM_WEBLINKS_FIELD_LANGUAGE_DESC"
			class="inputbox">
				<option value="*">JALL</option>
		</field>

		<!-- to be reviewed/deleted 
		<field 
			id="approved" 
			name="approved" 
			type="radio"
			class="inputbox" 
			label="WEBLINKS_APPROVED_LABEL"
			description="WEBLINKS_APPROVED_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
		</field>-->
		
		<field 
			name="created" 
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL" 
			description="JGLOBAL_FIELD_CREATED_DESC"
			class="inputbox" 
			size="16" 
			format="%Y-%m-%d %H:%M:%S"
			filter="server_utc" 
			default="2010-01-01 01:01:01"
		/>

		<field 
			name="modified" 
			type="hidden" 
			class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL" 
			description="JGLOBAL_FIELD_MODIFIED_DESC"
			size="16" 
			readonly="true" 
			filter="unset" 
			
			
		/>

		<field 
			name="modified_by" 
			type="hidden" 
			filter="unset" 
		/>

		<field 
			name="checked_out" 
			type="hidden" 
			filter="unset" 
		/>

		<field 
			name="checked_out_time" 
			type="hidden" 
			filter="unset" 
		/>
	<!-- to be reviewed/deleted 
		<field 
			name="publish_up" 
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_UP_LABEL" 
			description="JGLOBAL_FIELD_PUBLISH_UP_DESC"
			class="inputbox" 
			format="%Y-%m-%d %H:%M:%S" 
			size="30"
			filter="server_utc" 
		/>-->
	<!-- to be reviewed/deleted 
		<field 
			name="publish_down" 
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL" 
			description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC"
			class="inputbox" 
			format="%Y-%m-%d %H:%M:%S" 
			size="30"
			filter="server_utc" 
		/>-->
	<!-- to be reviewed/deleted 
		<field 
			name="metakey" 
			type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL" 
			description="JFIELD_META_KEYWORDS_DESC"
			class="inputbox" 
			rows="3" 
			cols="30"
		/>-->
	<!-- to be reviewed/deleted 
		<field 
			name="metadesc" 
			type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL" 
			description="JFIELD_META_DESCRIPTION_DESC"
			class="inputbox" 
			rows="3" 
			cols="30" 
		/>-->

		<field 
			name="xreference" 
			type="text"
			label="JFIELD_XREFERENCE_LABEL" 
			description="JFIELD_XREFERENCE_DESC"
			class="inputbox" 
			size="20" 
		/>

		<field 
			name="robots" 
			type="list"
			label="JFIELD_METADATA_ROBOTS_LABEL" 
			description="JFIELD_METADATA_ROBOTS_DESC" >
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JGLOBAL_INDEX_FOLLOW</option>
				<option value="1">JGLOBAL_NOINDEX_FOLLOW</option>
				<option value="2">JGLOBAL_INDEX_NOFOLLOW</option>
				<option value="3">JGLOBAL_NOINDEX_NOFOLLOW</option>
				<option value="4">JGLOBAL_NO_ROBOTS_TAG</option>
		</field>
	<!-- to be reviewed/deleted -->
		<field 
			name="author" 
			type="text"
			label="JAUTHOR" 
			description="JFIELD_METADATA_AUTHOR_DESC"
			size="20" 
		/>
	<!-- to be reviewed/deleted -->
		<field 
			name="rights" 
			type="textarea" 
			label="JFIELD_META_RIGHTS_LABEL"
			description="JFIELD_META_RIGHTS_DESC" 
			required="" 
			filter="string"
			cols="30" 
			rows="2" 
		/>
	</fieldset>

	<fields name="params">
		<fieldset 
			name="jbasic" 
			label="JGLOBAL_FIELDSET_OPTIONS">
				<field name="target" type="list" default="0"
					label="COM_WEBLINKS_FIELD_TARGET_LABEL" description="COM_WEBLINKS_FIELD_TARGET_DESC">
						<option value="0">JBROWSERTARGET_PARENT</option>
						<option value="1">JBROWSERTARGET_NEW</option>
						<option value="2">JBROWSERTARGET_POPUP</option>
						<option value="3">JBROWSERTARGET_MODAL</option>
				</field>

				<field 
					name="count_clicks" 
					type="list"
					label="COM_WEBLINKS_FIELD_COUNTCLICKS_LABEL"
					description="COM_WEBLINKS_FIELD_COUNTCLICKS_DESC">
						<option value="">JGLOBAL_USE_GLOBAL</option>
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				</field>
		</fieldset>
	</fields>

	
</form>
