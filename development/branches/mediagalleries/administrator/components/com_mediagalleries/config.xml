			name="allow_comments" 
			type="radio" 
			default="1" 
			label="COM_MEDIAGALLERIES_FIELD_ALLOW_COMMENTS_LABEL" 
			description="COM_MEDIAGALLERIES_FIELD_ALLOW_COMMENTS_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
		</param>
		
		<!-- Display -->
		<param 
			name="@spacer" 
			type="spacer" 
			default="" 
			label="" 
			description="" 
		/>			
		<param 
			name="style" 
			type="filelist" 
			default="default.css" 
			label="COM_MEDIAGALLERIES_FIELD_STYLE_LABEL" 
			description="COM_MEDIAGALLERIES_FIELD_STYLE_DESC" 
			directory="components/com_mediagalleries/assets" 
			filter=".css" 
			exclude="" 
			stripext="" 
			hide_default="true" />
