		<param 
			name="show_embed" 
			type="radio" 
			default="0" 
			label="COM_MEDIAGALLERIES_FIELD_EMBED_CODE_LABEL" 
			description="COM_MEDIAGALLERIES_FIELD_EMBED_CODE_DESC">
