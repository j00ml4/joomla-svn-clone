<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<metadata>
	<layout title="com_contact_category_view_default_title">
		<message>
			<![CDATA[COM_CONTACT_CATEGORY_VIEW_DEFAULT_DESC]]>
		</message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request"
			addfieldpath="/administrator/components/com_contact/models/fields"
		>

			<field name="catid" type="category"
				description="COM_CONTACT_FIELD_CATEGORY_DESC"
				extension="com_contact"
				label="COM_CONTACT_FIELD_CATEGORY_LABEL"
				required="true"
			/>
		</fieldset>
	</fields>


	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params">
	
		<!-- Basic options. -->
		<fieldset name="basic"
		>

			<field name="display_num" type="list"
				default="20"
				description="COM_CONTACT_FIELD_NUM_CONTACTS_DESC"
				label="COM_CONTACT_FIELD_NUM_CONTACTS_LABEL"
			>
				<option value="5">J5</option>
				<option value="10">J10</option>
				<option value="15">J15</option>
				<option value="20">J20</option>
				<option value="25">J25</option>
				<option value="30">J30</option>
				<option value="50">J50</option>
				<option value="100">J100</option>
				<option value="0">JALL</option>
			</field>

			<field name="image" type="imagelist"
				description="JFIELD_CATEGORY_IMAGE_DESC"
				directory="/images"
				hide_default="1"
				label="JFIELD_CATEGORY_IMAGE_LABEL"
			/>

			<field name="image_align" type="radio"
				default="right"
				description="COM_CONTACT_FIELD_IMAGE_ALIGN_DESC"
				label="COM_CONTACT_FIELD_IMAGE_ALIGN_LABEL"
			>
				<option value="left">JGLOBAL_LEFT</option>
				<option value="right">JGLOBAL_RIGHT</option>
			</field>

			<field name="spacer1" type="spacer"
				hr="true"
			/>

			<field name="show_limit" type="radio"
				default="0"
				description="COM_CONTACT_FIELD_LIMIT_BOX_DESC"
				label="COM_CONTACT_FIELD_LIMIT_BOX_LABEL"
			>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="show_feed_link" type="radio"
				default="1"
				description="COM_CONTACT_FIELD_FEEDLINK_DESC"
				label="COM_CONTACT_FIELD_FEEDLINK_LABEL"
			>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
	</fields>
</metadata>