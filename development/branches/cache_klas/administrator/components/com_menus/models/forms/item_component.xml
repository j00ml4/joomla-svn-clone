			name="robots"
			type="list"
			label="JFIELD_METADATA_ROBOTS_LABEL"
			description="JFIELD_METADATA_ROBOTS_DESC"
			default="">
			<option
				value="">JCOMMON_USE_GLOBAL</option>
			<option
				value="0">JCOMMON_INDEX_FOLLOW</option>
			<option
				value="1">JCOMMON_NOINDEX_FOLLOW</option>
			<option
				value="2">JCOMMON_INDEX_NOFOLLOW</option>
			<option
				value="3">JCOMMON_NOINDEX_NOFOLLOW</option>
			<option
				value="4">JCOMMON_NO_ROBOTS_TAG</option>
		</field>

		<field
			id="secure"
			name="secure"
			type="radio"
			label="COM_MENUS_ITEM_FIELD_SECURE_LABEL"
			description="COM_MENUS_ITEM_FIELD_SECURE_DESC"
			default="0"
			filter="integer">
			<option
				value="-1">JOFF</option>
			<option
				value="1">JON</option>
