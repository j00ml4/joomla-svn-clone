<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fields>
		<field
			id="id"
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"
		/>

		<field
			id="catid"
			name="catid"
			type="Categories"
			extension="com_newsfeeds"
			allow_none="false"
			class="inputbox"
			default=""
			label="Newsfeeds_Category_Label"
			description="Newsfeeds_Category_Desc"
			required="true"
		/>


		<field
			id="name"
			name="name"
			type="text"
			class="inputbox"
			default=""
			size="40"
			label="Newsfeeds_Name_Label"
			description="Newsfeeds_Name_Desc"
			required="true"
		/>

		<field
			id="alias"
			name="alias"
			type="text"
			class="inputbox"
			default=""
			size="40"
			label="Newsfeeds_Alias_Label"
			description="Newsfeeds_Alias_Desc"
		/>

		<field
			id="published"
			name="published"
			type="radio"
			class="inputbox"
			default="1"
			label="Newsfeeds_State_Label"
			description="Newsfeeds_State_Desc"
		>
			<option value="1">JState_Published</option>
			<option value="0">JState_UnPublished</option>
		</field>

		<field
			id="link"
			name="link"
			type="Text"
			class="inputbox"
			default=""
			size="60"
			label="Newsfeeds_Link_Label"
			description="Newsfeeds_Link_Desc"
			required="true"
		/>	
		
		<field
			id="numarticles"
			name="numarticles"
			type="Text"
			class="inputbox"
			default="5"
			size="2"
			label="Newsfeeds_Numarticles_Label"
			description="Newsfeeds_Numarticles_Desc"
			required="true"
		/>
		
		<field
			id="cache_time"
			name="cache_time"
			type="Text"
			class="inputbox"
			default="3600"
			size="4"
			label="Newsfeeds_Cachetime_Label"
			description="Newsfeeds_Cachetime_Desc"
			required="true"
		/>
				
		<field
			id="ordering"
			name="ordering"
			type="Ordering"
			class="inputbox"
			default=""
			label="Newsfeeds_Ordering_Label"
			description="Newsfeeds_Ordering_Desc"
		/>
		
		<field
			id="rtl"
			name="rtl"
			type="list"
			class="inputbox"
			default="1"
			label="Newsfeeds_RTL_Label"
			description="Newsfeeds_RTL_Desc"
		>
			<option value="0">Newsfeeds_RTL_select</option>
			<option value="1">Newsfeeds_RTL_left_to_right</option>
			<option value="1">Newsfeeds_RTL_right_to_left</option>
		</field>
		
		
		<field
			id="checked_out"
			name="checked_out"
			type="Text"
			class="inputbox"
			default=""
			size="6"
			label="Newsfeeds_Checkedout_Label"
			description="Newsfeeds_Checkedout_Desc"
			readonly="true"
			filter="unset"
		/>

		<field
			id="checked_out_time"
			name="checked_out_time"
			type="Text"
			class="inputbox"
			default=""
			size="6"
			label="Newsfeeds_Checkedout_Time_Label"
			description="Newsfeeds_Checkedout_Time_Desc"
			readonly="true"
			filter="unset"
		/>

	</fields>
	
	<fields
		group="params"
		array="true"
		label="Newsfeeds_Options">
		
		<field
			id="show_headings"
			name="show_headings"
			type="Radio"
			default="1"
			label="Newsfeeds_Table_Headings_Label"
			description="Newsfeeds_Table_Headings_Desc">
			<option
				value="0">JOption_Hide</option>
			<option
				value="1">JOption_Show</option>
		</field>
		
		<field
			id="show_name"
			name="show_name"
			type="Radio"
			default="1"
			label="Newsfeeds_Name_Column_Label"
			description="Newsfeeds_Name_Column_Desc">
			<option
				value="0">JOption_Hide</option>
			<option
				value="1">JOption_Show</option>
		</field>
			
		<field
			id="show_articles"
			name="show_articles"
			type="Radio"
			default="1"
			label="Newsfeeds_Num_Articles_Column_Label"
			description="Newsfeeds_Num_Articles_Column_Desc">
			<option
				value="0">JOption_Hide</option>
			<option
				value="1">JOption_Show</option>
		</field>
		
		<field
			id="show_link"
			name="show_link"
			type="Radio"
			default="1"
			label="Newsfeeds_Show_Links_Label"
			description="Newsfeeds_Show_Links_Desc">
			<option
				value="0">JOption_Hide</option>
			<option
				value="1">JOption_Show</option>
		</field>
		
		<!-- Spacer -->
		
		<field
			id="show_cat_description"
			name="show_cat_description"
			type="Radio"
			default="1"
			label="Newsfeeds_Show_Cat_Label"
			description="Newsfeeds_Show_Cat_Desc">
			<option
				value="0">JOption_Hide</option>
			<option
				value="1">JOption_Show</option>
		</field>
		
		<field
			id="show_cat_items"
			name="show_cat_items"
			type="Radio"
			default="1"
			label="Newsfeeds_Show_Cat_Items_Label"
			description="Newsfeeds_Show_Cat_Items_Desc">
			<option
				value="0">JOption_Hide</option>
			<option
				value="1">JOption_Show</option>
		</field>
		
		<!-- Spacer -->
		
		<field
			id="show_feed_image"
			name="show_feed_image"
			type="Radio"
			default="1"
			label="Newsfeeds_Show_Feed_Image_Label"
			description="Newsfeeds_Show_Feed_Image_Desc">
			<option
				value="0">JOption_Hide</option>
			<option
				value="1">JOption_Show</option>
		</field>
		
		<field
			id="show_feed_description"
			name="show_feed_description"
			type="Radio"
			default="1"
			label="Newsfeeds_Show_Feed_Description_Label"
			description="Newsfeeds_Show_Feed_Description_Desc">
			<option
				value="0">JOption_Hide</option>
			<option
				value="1">JOption_Show</option>
		</field>
		
		<field
			id="show_item_description"
			name="show_item_description"
			type="Radio"
			default="1"
			label="Newsfeeds_Show_Item_Description_Label"
			description="Newsfeeds_Show_Item_Description_Desc">
			<option
				value="0">JOption_Hide</option>
			<option
				value="1">JOption_Show</option>
		</field>
		
		<field
			id="feed_word_count"
			name="feed_word_count"
			type="text"
			size="6"
			default="0"
			label="Newsfeeds_Word_Count_Label"
			description="Newsfeeds_Word_Count_Desc"/>
	</fields>
</form>