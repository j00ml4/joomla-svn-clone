<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fields>
		<field
			id="id"
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"
		/>

		<field
			id="catid"
			name="catid"
			type="Categories"
			extension="com_newsfeeds"
			allow_none="false"
			class="inputbox"
			default=""
			label="Newsfeeds_Category_Label"
			description="Newsfeeds_Category_Desc"
			required="true"
		/>


		<field
			id="name"
			name="name"
			type="text"
			class="inputbox"
			default=""
			size="40"
			label="Newsfeeds_Name_Label"
			description="Newsfeeds_Name_Desc"
			required="true"
		/>

		<field
			id="alias"
			name="alias"
			type="text"
			class="inputbox"
			default=""
			size="40"
			label="Newsfeeds_Alias_Label"
			description="Newsfeeds_Alias_Desc"
		/>

		<field
			id="published"
			name="published"
			type="radio"
			class="inputbox"
			default="1"
			label="Newsfeeds_State_Label"
			description="Newsfeeds_State_Desc"
		>
			<option value="1">JState_Published</option>
			<option value="0">JState_UnPublished</option>
		</field>

		<field
			id="link"
			name="link"
			type="Text"
			class="inputbox"
			default=""
			size="60"
			label="Newsfeeds_Link_Label"
			description="Newsfeeds_Link_Desc"
			required="true"
		/>	
		
		<field
			id="numarticles"
			name="numarticles"
			type="Text"
			class="inputbox"
			default="5"
			size="2"
			label="Newsfeeds_Numarticles_Label"
			description="Newsfeeds_Numarticles_Desc"
			required="true"
		/>
		
		<field
			id="cache_time"
			name="cache_time"
			type="Text"
			class="inputbox"
			default="3600"
			size="4"
			label="Newsfeeds_Cachetime_Label"
			description="Newsfeeds_Cachetime_Desc"
			required="true"
		/>
				
		<field
			id="ordering"
			name="ordering"
			type="Ordering"
			class="inputbox"
			default=""
			label="Newsfeeds_Ordering_Label"
			description="Newsfeeds_Ordering_Desc"
		/>
		
		<field
			id="rtl"
			name="rtl"
			type="list"
			class="inputbox"
			default="1"
			label="Newsfeeds_RTL_Label"
			description="Newsfeeds_RTL_Desc"
		>
			<option value="0">Newsfeeds_RTL_select</option>
			<option value="1">Newsfeeds_RTL_left_to_right</option>
			<option value="1">Newsfeeds_RTL_right_to_left</option>
		</field>
		
		
		<field
			id="checked_out"
			name="checked_out"
			type="Text"
			class="inputbox"
			default=""
			size="6"
			label="Newsfeeds_Checkedout_Label"
			description="Newsfeeds_Checkedout_Desc"
			readonly="true"
			filter="unset"
		/>

		<field
			id="checked_out_time"
			name="checked_out_time"
			type="Text"
			class="inputbox"
			default=""
			size="6"
			label="Newsfeeds_Checkedout_Time_Label"
			description="Newsfeeds_Checkedout_Time_Desc"
			readonly="true"
			filter="unset"
		/>

	</fields>
	</form>