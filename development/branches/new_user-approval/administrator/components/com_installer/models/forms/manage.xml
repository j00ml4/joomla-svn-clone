<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fields name="search">
		<fieldset
			name="search"
		>
			<field
				id="expr"
				name="expr"
				type="search"
				label="JSEARCH_FILTER_LABEL"
				description="JSEARCH_FILTER"
			/>
			<field
				id="hideprotected"
				name="hideprotected"
				type="checkbox"
				value="1"
				label="COM_INSTALLER_LABEL_HIDEPROTECTED_LABEL"
				description="COM_INSTALLER_LABEL_HIDEPROTECTED_DESC"
				onclick="this.form.submit();"
			/>
		</fieldset>
	</fields>
	<fields name="select">
		<fieldset
			name="select"
		>
			<field
				id="type"
				name="type"
				type="type"
				hidden="true"
				onchange="this.form.submit();"
			>
				<option value="">COM_INSTALLER_VALUE_TYPE_SELECT</option>
			</field>
			<field
				id="group"
				name="group"
				type="group"
				hidden="true"
				onchange="this.form.submit();"
			>
				<option value="">COM_INSTALLER_VALUE_FOLDER_SELECT</option>
				<option value="*">COM_INSTALLER_VALUE_FOLDER_NONAPPLICABLE</option>
			</field>
			<field
				id="client"
				name="client"
				type="client"
				hidden="true"
				onchange="this.form.submit();"
			>
				<option value="">COM_INSTALLER_VALUE_CLIENT_SELECT</option>
			</field>
		</fieldset>
	</fields>
</form>