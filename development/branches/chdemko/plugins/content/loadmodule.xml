<?xml version="1.0" encoding="utf-8"?>
<install
	version="1.6"
	type="plugin"
	group="content">
	<name>Content - Load Modules</name>
	<author>Joomla! Project</author>
	<creationDate>November 2005</creationDate>
	<copyright>Copyright (C) 2005 - 2009 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.5</version>
	<description>DESCLOADPOSITION</description>
	<files>
		<filename
			plugin="loadmodule">loadmodule.php</filename>
	</files>
	<fields>
		<field
			name="style"
			type="list"
			default="none"
			label="Style"
			description="Code that will wrap modules">
			<option
				value="table">Wrapped by Table - Column</option>
			<option
				value="horz">Wrapped by Table - Horizontal</option>
			<option
				value="xhtml">Wrapped by Divs</option>
			<option
				value="rounded">Wrapped by Multiple Divs</option>
			<option
				value="none">No wrapping - raw output</option>
		</field>
	</fields>
</install>
