<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: project.xml 17175 2010-05-18 06:39:50Z infograf768 $ -->
<form>
    <fieldset addfieldpath="components/com_projects/models/fields">
        <field id="id"
			name="id" 
			type="hidden"
			default="0"
			label="JGLOBAL_ID"
			readonly="true"
			required="true"
			size="10" />
				
        <field id="parent_id"
			name="parent_id" 
			type="task_parent"
			description="COM_PROJECTS_FIELD_TASK_PARENT_DESC"
			label="COM_PROJECTS_FIELD_TASK_PARENT_LABEL">
         	<option value="1">JNONE</option>			
		</field>
			
		<field id="type"
			name="type" 
			type="task_type"
			description="COM_PROJECTS_FIELD_TYPE_DESC"
			label="COM_PROJECTS_FIELD_TYPE_LABEL" />			
			
		 <field id="catid"
			name="catid" 
			type="category"
			description="JFIELD_CATEGORY_DESC"
			extension="com_projects.task"
			label="JCATEGORY" >
         	<option value="">JNONE</option>
		</field>
		
        <field id="title" 
			name="title" 
			type="text"
			description="JFIELD_TITLE_DESC"
			label="JGLOBAL_TITLE"
			required="true"
			size="30" />
			
		<field id="estimate" 
			name="estimate" 
			type="text"
			description="COM_PROJECTS_FIELD_ESTIMATE_DESC"
			label="COM_PROJECTS_FIELD_ESTIMATE_LABEL"
			size="3" />	       
              
		<field id="priority" 
			name="priority" 
			type="list"
			description="COM_PROJECTS_FIELD_PRIORITY_DESC"
			label="COM_PROJECTS_FIELD_PRIORITY_LABEL"
			default="2">
			<option value="1">COM_PROJECTS_PRIORITY_HIGH</option>
            <option value="2">COM_PROJECTS_PRIORITY_NORMAL</option>
            <option value="3">COM_PROJECTS_PRIORITY_LOW</option>
		</field>

        <field id="description"
			name="description" 
			type="editor"
			buttons="true"
			hide="pagebreak,article"
			description="COM_PROJECTS_FIELD_DESCRIPTION_DESC"
			filter="safehtml"
			label="JGLOBAL_DESCRIPTION" />
        	 
		 <field id="start_at"
			name="start_at"
			type="calendar"
			label="COM_PROJECTS_FIELD_START_AT_TASK_LABEL"
			description="COM_PROJECTS_FIELD_START_AT_TASK_DESC"
			class="inputbox"
			format="%Y-%m-%d"
			size="30" />

		<field id="finish_at"
			name="finish_at"
			type="calendar"
			label="COM_PROJECTS_FIELD_FINISH_AT_TASK_LABEL"
			description="COM_PROJECTS_FIELD_FINISH_AT_TASK_DESC"
			class="inputbox"
			format="%Y-%m-%d"
			size="30" />
		
		<!-- CORE -->	
		 <field id="state" 
			name="state" 
			type="list"
			default="1"
			description="JFIELD_PUBLISHED_DESC"
			label="JGLOBAL_STATE"
			size="1" >
         	<option value="2">COM_PROJECTS_STATE_FINISHED</option>
            <option value="1">COM_PROJECTS_STATE_APPROVED</option>
            <option value="-3">COM_PROJECTS_STATE_REPORTED</option>
            <option value="0">COM_PROJECTS_STATE_DENIED</option>
        </field>
		
		<field id="ordering" 
			name="ordering" 
			type="ordering"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			class="inputbox"
			size="6"
			default="1" />
		 
		 <field id="language"
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="JFIELD_LANGUAGE_DESC"
			class="inputbox"
			default="*">
			<option value="*">JALL</option>
		</field>

		<field id="featured" 
			name="featured" 
			type="checkbox"
			label="JFIELD_FEATURED_LABEL"
			description="JFIELD_FEATURED_DESC"
			class="inputbox"
			value="1"
			default="0" />
		
		<field id="access"
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1" />		
    </fieldset>
	<!-- Params -->	
	<fields name="params">
	
	</fields>	 
</form>
