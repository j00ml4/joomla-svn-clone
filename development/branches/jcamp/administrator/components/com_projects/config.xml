<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="basic"
		label="COM_PROJCETS_CONFIGURATION_GENERAL_SETTINGS_LABEL"
		description="COM_PROJCETS_CONFIGURATION_GENERAL_SETTINGS_LABEL">
		
		<field name="style"
			type="filelist"
			label="COM_PROJECTS_SELECT_STYLE_LABEL"
			description="COM_PROJECTS_SELECT_STYLE_DESC"
			directory="media/com_projects/css"
			hide_default="1"
			filter="css" 
			default="default.css" />
						
		<field name="show_back_button"
			type="radio"
			label="COM_PROJECTS_SHOW_BACK_BUTTON_LABEL"
			description="COM_PROJECTS_SHOW_BACK_BUTTON_DESC"
			class="inputbox"
			size="1"
			default="0">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>
		
		<field name="spacer1"
			type="spacer"
			hr="true"
			/>

		<field name="use_content_plugins_projects"
			type="radio"
			label="COM_PROJECTS_CONFIGURATION_USE_CONTENT_PLUGINS_PROJECTS_LABEL"
			description="COM_PROJECTS_CONFIGURATION_USE_CONTENT_PLUGINS_PROJECTS_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>

		<field name="use_content_plugins_documents"
			type="radio"
			label="COM_PROJECTS_CONFIGURATION_USE_CONTENT_PLUGINS_DOCUMENTS_LABEL"
			description="COM_PROJECTS_CONFIGURATION_USE_CONTENT_PLUGINS_DOCUMENTS_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>

		<field name="use_content_plugins_tasks"
			type="radio"
			label="COM_PROJECTS_CONFIGURATION_USE_CONTENT_PLUGINS_TASKS_LABEL"
			description="COM_PROJECTS_CONFIGURATION_USE_CONTENT_PLUGINS_TASKS_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>
	</fieldset>

	<fieldset name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC">
		<field name="rules"	type="rules" label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules" component="com_projects"	section="component"/>	
	</fieldset>
</config>
