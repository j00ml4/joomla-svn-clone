<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC">
		<field name="rules"	type="rules" label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules" component="com_projects"	section="component"/>	
	</fieldset>
	
	<fieldset name="basic"
		label="COM_PROJECTS_GUEST_TOOLS_LABEL"
		description="COM_PROJECTS_GUEST_TOOLS_DESC">
		
		<field name="style"
			type="filelist"
			label="COM_PROJECTS_SELECT_STYLE_LABEL"
			description="COM_PROJECTS_SELECT_STYLE_DESC"
			directory="media/com_projects/css"
			hide_default="1"
			filter="css" 
			default="default.css" />
						
		<field name="show_back_button"
			type="radio"
			label="COM_PROJECTS_SHOW_BACK_BUTTON_LABEL"
			description="COM_PROJECTS_SHOW_BACK_BUTTON_DESC"
			class="inputbox"
			size="1"
			default="0">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>

		<field name="use_content_plugins"
			type="radio"
			label="COM_PROJECTS_USE_CONTENT_PLUGINS_LABEL"
			description="COM_PROJECTS_USE_CONTENT_PLUGINS_DESC"
			class="inputbox"
			size="1"
			default="0">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>

	</fieldset>

</config>
