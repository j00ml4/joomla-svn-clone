<?xml version="1.0" encoding="utf-8"?>
<config>

	<fieldset name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL">
		
		<field name="rules"	type="rules" label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules" component="com_projects"	section="component"/>	
			
	</fieldset>

	<fieldset name="layout"
		label="COM_PROJCETS_FIELD_LAYOUTS_SETTINGS_LABEL"
		description="COM_PROJCETS_FIELD_LAYOUTS_SETTINGS_DESC">
		
		
		<field name="style"
			type="filelist"
			label="COM_PROJECTS_FIELD_SELECT_STYLE_LABEL"
			description="COM_PROJECTS_FIELD_SELECT_STYLE_DESC"
			directory="media/com_projects/css"
			hide_default="1"
			filter="css" 
			default="default.css" />
						
		<field name="show_back_button"
			type="radio"
			label="COM_PROJECTS_FIELD_SHOW_BACK_BUTTON_LABEL"
			description="COM_PROJECTS_FIELD_SHOW_BACK_BUTTON_DESC"
			size="1"
			default="0">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>
		
		<field name="spacer_lists"
			type="spacer"
			hr="true"
			/>
		
		<field name="number_listers_items"
			type="text"
			label="COM_PROJECTS_FIELD_NUMBER_LISTERS_ITEMS_LABEL"
			description="COM_PROJECTS_FIELD_NUMBER_LISTERS_ITEMS_DESC"
			size="5"
			default="5" />

		<field name="listing_tasks"
			type="radio"
			label="COM_PROJECTS_FIELD_LISTING_TASKS_LABEL"
			description="COM_PROJECTS_FIELD_LISTING_TASKS_DESC"
			size="1"
			default="1">
			<option	value="">COM_PROJECTS_FIELD_LISTING_TASKS_ALL</option>
			<option	value="1">COM_PROJECTS_FIELD_LISTING_TASKS_PENDING</option>
			<option	value="2">COM_PROJECTS_FIELD_LISTING_TASKS_FINISHED</option>
			<option	value="-3">COM_PROJECTS_FIELD_LISTING_TASKS_REPORTED</option>
			<option	value="-2">COM_PROJECTS_FIELD_LISTING_TASKS_DENIED</option>
		</field>

		<field name="listing_tickets"
			type="radio"
			label="COM_PROJECTS_FIELD_LISTING_TICKETS_LABEL"
			description="COM_PROJECTS_FIELD_LISTING_TICKETS_DESC"
			size="1"
			default="1">
			<option	value="">COM_PROJECTS_FIELD_LISTING_TICKETS_ALL</option>
			<option	value="-3">COM_PROJECTS_FIELD_LISTING_TICKETS_REPORTED</option>
			<option	value="1">COM_PROJECTS_FIELD_LISTING_TICKETS_APPROVED</option>
			<option	value="2">COM_PROJECTS_FIELD_LISTING_TICKETS_FINISHED</option>
			<option	value="4">COM_PROJECTS_FIELD_LISTING_TICKETS_ACTIVE</option>
			<option	value="-2">COM_PROJECTS_FIELD_LISTING_TICKETS_DENIED</option>
		</field>


    <field type="spacer" hr="true" />
    <field name="task_access"
      type="accesslevel"
      label="COM_PROJECTS_FIELD_ACCESS_TASKS_LABEL"
      description="COM_PROJECTS_FIELD_ACCESS_TASKS_DESC" />
      
    <field name="ticket_access"
      type="accesslevel"
      label="COM_PROJECTS_FIELD_ACCESS_TICKETS_LABEL"
      description="COM_PROJECTS_FIELD_ACCESS_TICKETS_DESC" />

    <field name="document_access"
      type="accesslevel"
      label="COM_PROJECTS_FIELD_ACCESS_DOCUMENTS_LABEL"
      description="COM_PROJECTS_FIELD_ACCESS_DOCUMENTS_DESC" />
    
    <field name="members_access"
      type="accesslevel"
      label="COM_PROJECTS_FIELD_ACCESS_MEMBERS_LABEL"
      description="COM_PROJECTS_FIELD_ACCESS_MEMBERS_DESC" />  
	</fieldset>
	
	
	<fieldset name="integration"
		label="JGLOBAL_INTEGRATION_LABEL"
		description="COM_PROJECTS_CONFIG_INTEGRATION_SETTINGS_DESC">
		
				
		<field name="use_content_plugins"
			type="checkboxes"
			label="COM_PROJECTS_FIELD_USE_CONTENT_PLUGINS_LABEL"
			class="radio"
			description="COM_PROJECTS_FIELD_USE_CONTENT_PLUGINS_DESC">
			<option	value="portfolios">COM_PROJECTS_PORTFOLIOS</option>
			<option	value="projects">COM_PROJECTS_PROJECTS</option>
			<option	value="documents">COM_PROJECTS_DOCUMENTS</option>
			<option	value="tasks">COM_PROJECTS_TASKS</option>
		</field>
		
		<field type="spacer" hr="true" />
		<field name="menu_integration"
			type="checkboxes"
			class="radio"
			label="COM_PROJECTS_FIELD_MENU_INTEGRATION_LABEL"
			description="COM_PROJECTS_FIELD_MENU_INTEGRATION_DESC">
			<option	value="portfolios">COM_PROJECTS_PORTFOLIOS</option>
			<option	value="porjects">COM_PROJECTS_PROJECTS</option>
		</field>
		<field
			name="menutype"
			type="menu"
			label="COM_PROJECTS_FIELD_MENUTYPE_LABEL"
			description="COM_PROJECTS_FIELD_MENUTYPE_DESC" >
			<option value="0">JOPTION_DO_NOT_USE</option>
		</field>				
	</fieldset>
</config>
