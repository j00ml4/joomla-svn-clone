<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC">
		<field name="rules"	type="rules" label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules" component="com_projects"	section="component"/>	
	</fieldset>
	
	<fieldset name="basic"
		label="COM_PROJECTS_GUEST_TOOLS_LABEL"
		description="COM_PROJECTS_GUEST_TOOLS_DESC">
		
		<field name="style"
			type="filelist"
			label="COM_PROJECTS_SELECT_STYLE_LABEL"
			description="COM_PROJECTS_SELECT_STYLE_DESC"
			directory="media/com_projects/css"
			hide_default="1"
			filter="css" 
			default="default.css" />

		<field type="spacer" hr="true" />
		
		<!-- Shaw be on permitions -->
		<field name="show_tasks"
			type="radio"
			label="COM_PROJECTS_SHOW_TASKS_LABEL"
			description="COM_PROJECTS_SHOW_TASKS_DESC"
			class="inputbox"
			size="1"
			default="0">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>

		<field name="show_tickets"
			type="radio"
			label="COM_PROJECTS_SHOW_TICKETS_LABEL"
			description="COM_PROJECTS_SHOW_TICKETS_DESC"
			class="inputbox"
			size="1"
			default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>	
		
		<field name="show_documents"
			type="radio"
			label="COM_PROJECTS_SHOW_DOCUMENTS_LABEL"
			description="COM_PROJECTS_SHOW_DOCUMENTS_DESC"
			class="inputbox"
			size="1"
			default="0">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>
		
		<field name="show_activities"
			type="radio"
			label="COM_PROJECTS_SHOW_ACTIVITIES_LABEL"
			description="COM_PROJECTS_SHOW_ACTIVITIES_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>

		<field name="show_members"
			type="radio"
			label="COM_PROJECTS_SHOW_MEMBERS_LABEL"
			description="COM_PROJECTS_SHOW_MEMBERS_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>

	</fieldset>

</config>
