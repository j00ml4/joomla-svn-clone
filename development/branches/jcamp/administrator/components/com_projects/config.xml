			size="1"
			default="0">
			<option	value="0">JNO</option>
			<option	value="1">Featured only</option>
			<option	value="2">JALL</option>
		</field>
		
		<field name="view_activities"
			type="radio"
			label="COM_PROJECTS_VIEW_ACTIVITIES_LABEL"
			description="COM_PROJECTS_VIEW_ACTIVITIES_DESC"
