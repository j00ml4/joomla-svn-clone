<?xml version="1.0" encoding="utf-8"?>
<install
	version="1.6"
	type="plugin"
	group="content">
	<name>Content - Pagebreak</name>
	<author>Joomla! Project</author>
	<creationDate>November 2005</creationDate>
	<copyright>Copyright (C) 2005 - 2009 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.5</version>
	<description>DESCCONTENTPAGEBREAK</description>
	<files>
		<filename
			plugin="pagebreak">pagebreak.php</filename>
	</files>
	<fields>
		<field
			name="enabled"
			type="radio"
			default="1"
			label="ENABLE_PLUGIN"
			description="fieldENABLED">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>

		<field
			name="title"
			type="radio"
			default="1"
			label="Site Title"
			description="fieldSITETITLE">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>

		<field
			name="multipage_toc"
			type="radio"
			default="1"
			label="Table of Contents"
			description="fieldSITETOC">
			<option
				value="0">Hide</option>
			<option
				value="1">Show</option>
		</field>

		<field
			name="showall"
			type="radio"
			default="1"
			label="Show All"
			description="fieldSITESHOWALL">
			<option
				value="0">Hide</option>
			<option
				value="1">Show</option>
		</field>
	</fields>
</install>
