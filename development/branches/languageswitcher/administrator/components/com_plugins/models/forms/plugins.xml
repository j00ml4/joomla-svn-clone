<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fields name="filters">
		<fieldset name="search">
			<field type="search"
				name="search"
				label="JSEARCH_FILTER_LABEL"
				description="JSEARCH_FILTER"
			/>
		</fieldset>
		<fieldset name="select">
			<field type="accesslevel"
				name="access"
				hidden="true"
				onchange="this.form.submit();"
			>
				<option value="">JOPTION_SELECT_ACCESS</option>
			</field>
			<field type="state"
				name="state"
				hidden="true"
				onchange="this.form.submit();"
				all="no"
				trash="no"
				archived="no"
			>
				<option value="">JOPTION_SELECT_PUBLISHED</option>
			</field>
			<field type="extensionfolder"
				name="folder"
				hidden="true"
				libraries="no"
				onchange="this.form.submit();"
			>
				<option value="">COM_PLUGINS_OPTION_FOLDER</option>
			</field>
		</fieldset>
	</fields>
</form>
