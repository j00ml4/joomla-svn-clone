<?xml version="1.0" encoding="UTF-8"?>
<contact>
	<params>
		<param name="show_name" type="radio" default="1" label="NAME" description="NAME_DESCRIPTION_CONTACT">
			<option value="0">HIDE</option>
			<option value="1">SHOW</option>
		</param>
	</params>
	<params group="directory">
		<param name="show_name_directory" type="radio" default="1" label="NAME" description="NAME_DESCRIPTION_DIRECTORY">
			<option value="0">HIDE</option>
			<option value="1">SHOW</option>
		</param>
	</params>
	<params group="email">
		<param name="show_email_form" type="radio" default="1" label="EMAIL_FORM" description="EMAIL_FORM_DESCRIPTION">
			<option value="0">HIDE</option>
			<option value="1">SHOW</option>
		</param>
		<param name="email_form_pos" type="list" default="bottom" label="POSITION" description="POSITION_DESCRIPTION">
			<option value="title">TITLE</option>
			<option value="top">TOP</option>
			<option value="left">LEFT</option>
			<option value="main">MAIN</option>
			<option value="right">RIGHT</option>
			<option value="bottom">BOTTOM</option>
		</param>
		<param name="email_form_access" type="list" default="0" label="ACCESS_LEVEL" description="ACCESS_LEVEL_DESCRIPTION">
			<option value="0">PUBLIC</option>
			<option value="1">PRIVATE</option>
			<option value="2">SPECIAL</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="email_description" type="text" size="30" default="" label="DESCRIPTION_EMAIL_TEXT" description="DESCRIPTION_EMAIL_TEXT_DESCRIPTION" />
		<param name="show_email_copy" type="radio" default="1" label="EMAIL_COPY" description="EMAIL_COPY_DESCRIPTION">
			<option value="0">HIDE</option>
			<option value="1">SHOW</option>
		</param>
		<param name="banned_email" type="textarea" default="" label="BANNED_EMAIL" rows="3" cols="30" description="BANNED_EMAIL_DESCIPTION" />
		<param name="banned_subject" type="textarea" default="" label="BANNED_SUBJECT" rows="3" cols="30" description="BANNED_SUBJECT_DESCIPTION" />
		<param name="banned_text" type="textarea" default="" label="BANNED_TEXT" rows="3" cols="30" description="BANNED_TEXT_DESCIPTION" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="show_captcha" type="radio" default="1" label="SHOW_CAPTCHA" description="SHOW_CAPTCHA_DESCRIPTION">
			<option value="0">HIDE</option>
			<option value="1">SHOW</option>
		</param>
		<param name="validate_email_form" type="radio" default="0" label="VALIDATION" description="VALIDATION_DESCRIPTION">
			<option value="0">ON_FIELD_INPUT</option>
			<option value="1">ON_SEND</option>
		</param>
	</params>
</contact>