<install type="component" version="1.5.0" method="upgrade">
	<name>jUpgrade</name>
	<creationDate>2009-11-20</creationDate>
  <author>Matias Aguirre</author>
  <authorEmail>maguirre@matware.com.ar</authorEmail>
