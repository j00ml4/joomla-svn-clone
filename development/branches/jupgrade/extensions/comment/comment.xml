<?xml version="1.0" ?>
<update>
	<!-- Description -->
	<name>CompoJoomComment</name>
	<description>CompoJoomComment for Joomla 1.7</description>
	<element>com_comment</element>
	<type>component</type>
	<version>1.0.0</version>
	<infourl title="comment">http://www.comment.com</infourl>

	<!-- The download url of the new package to be installed -->
	<downloads>
    <downloadurl type="full" format="zip"></downloadurl>
	</downloads>

	<!-- The folders to copy to the new site. -->
	<folders>
		<folder>media/comment</folder>
	</folders>

	<!-- Tags -->
	<tags>
		<tag>comment</tag>
	</tags>

	<!-- Maintainer description -->
	<maintainer>Matias Aguirre</maintainer>
	<maintainerurl>http://www.matware.com.ar/</maintainerurl>
	<section>Testing</section>
	<targetplatform name="joomla" version="1.6" />
</update>

