<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<metadata>
	<layout
		title="com_contact_category_view_default_title">
		<message>
			<![CDATA[com_contact_category_view_default_desc]]>
		</message>
	</layout>
	<fields
		group="request"
		array="true"
		label="Menus_Layout_Request_Variables_Label"
		description="Menus_Layout_Request_Variables_Desc"
		addfieldpath="/administrator/components/com_contact/models/fields">

		<field
			name="catid"
			type="category"
			extension="com_contact_details"
			default="0"
			label="Select Category"
			description="A contacts category" />
	</fields>
	<fields>
		<field
			name="display_num"
			type="list"
			default="20"
			label="Num Links"
			description="Number of Contacts to display as list.">
			<option
				value="5">5</option>
			<option
				value="10">10</option>
			<option
				value="15">15</option>
			<option
				value="20">20</option>
			<option
				value="25">25</option>
			<option
				value="30">30</option>
			<option
				value="50">50</option>
			<option
				value="100">100</option>
			<option
				value="0">All</option>
		</field>
		<field
			name="image"
			type="imagelist"
			directory="/images/stories"
			hide_default="1"
			default=""
			label="Image"
			description="fieldIMAGE" />
		<field
			name="image_align"
			type="radio"
			default="right"
			label="Image Align"
			description="Alignment of the image">
			<option
				value="left">Left</option>
			<option
				value="right">Right</option>
		</field>
		<field
			type="spacer" />
		<field
			name="show_limit"
			type="radio"
			default="0"
			label="Limit Box"
			description="fieldSHOWLIMIT">
			<option
				value="0">Hide</option>
			<option
				value="1">Show</option>
		</field>
		<field
			name="show_feed_link"
			type="radio"
			default="1"
			label="Show a feed link"
			description="fieldSHOWFEEDLINK">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>
	</fields>
</metadata>
