<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Contacts Categories Layout">
		<message>
			<![CDATA[CONTACT_CATEGORIES_LAYOUT_DESCRIPTION]]>
		</message>
	</layout>
	<state>
		<name>CONTACT_CATEGORIES_LAYOUT</name>
		<description>CONTACT_CATEGORIES_LAYOUT_DESCRIPTION</description>
		<params>
			 <param name="show_description" type="radio" default="0" label="SHOW_DESCRIPTION" description="SHOW_DESCRIPTION_DESCRIPTION">
	 			<option value="0">HIDE</option>
	 			<option value="1">SHOW</option>
	 		</param>
	 		<param name="description" type="textarea" default="" label="DESCRIPTION" rows="3" cols="30" description="CATEGORIES_DESCRIPTION_DESCRIPTION" />
			<param name="show_image" type="radio" default="0" label="DESCRIPTION_IMAGE" description="Show/Hide the page's description image">
	 			<option value="0">Hide</option>
	 			<option value="1">Show</option>
	 		</param>
			<param name="image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="IMAGE" description="IMAGE_DESCRIPTION" />
			<param name="image_align" type="radio" default="right" label="IMAGE_ALIGN" description="IMAGE_ALIGN_DESCRIPTION">
				<option value="left">LEFT</option>
				<option value="right">RIGHT</option>
			</param>
	 		<param name="@spacer" type="spacer" default="" label="" description="" />
	 		<param name="link" type="radio" default="0" label="HTML_LINK_CONTACT" description="HTML_LINK_CONTACT_DESCIPTION">
	 			<option value="0">NO</option>
	 			<option value="1">YES</option>
	 		</param>
	 		<param name="linkcat" type="radio" default="0" label="HTML_LINK_CATEGORY" description="HTML_LINK_CATEGORY_DESCRIPTION">
	 			<option value="0">NO</option>
	 			<option value="1">YES</option>
	 		</param>
		</params>
		<advanced>
			<param name="orderby" type="list" default="order" label="CONTACTS_ORDER" description="CONTACTS_ORDER_DESCRIPTION">
				<option value="alpha">Title Alphabetical</option>
				<option value="ralpha">Title Reverse-Alphabetical</option>
				<option value="order">Ordering</option>
			</param>
			<param name="groupby_cat" type="radio" default="1" label="GROUPBY_CATEGORY" description="GROUPBY_CATEGORY_DESCRIPTION">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>
			<param name="orderby_cat" type="list" default="order" label="CATEGORIES_ORDER" description="Order that the categories will be displayed in.">
				<option value="alpha">Title Alphabetical</option>
				<option value="ralpha">Title Reverse-Alphabetical</option>
				<option value="order">Ordering</option>
			</param>
			<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="alphabet" type="radio" default="1" label="ALPHABET_FILTER" description="ALPHABET_FILTER_DESCRIPTION">
				<option value="0">HIDE</option>
				<option value="1">SHOW</option>
			</param>
			<param name="search" type="radio" default="1" label="SEARCH_BOX_FILTER" description="SEARCH_BOX_FILTER_DESCRIPTION">
				<option value="0">HIDE</option>
				<option value="1">SHOW</option>
			</param>
			<param name="show_limit" type="radio" default="1" label="LIMIT_BOX" description="LIMIT_BOX_DESCRIPTION">
				<option value="0">HIDE</option>
				<option value="1">SHOW</option>
			</param>
		</advanced>
	</state>
</metadata>



