<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.6.0"
	client="site"
	method="upgrade">
	<name>Syndicate</name>
	<author>Joomla! Project</author>
	<creationDate>May 2006</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.6.0</version>
	<description>DESCSYNDICATE</description>
	<files>
		<filename
			module="mod_syndicate">mod_syndicate.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.php</filename>
		<filename>mod_syndicate.xml</filename>
	</files>
	<languages>
		<language
			tag="en-GB">en-GB.mod_syndicate.ini</language>
	</languages>
	<fields>
		<field
			name="text"
			type="text"
			default="Feed Entries"
			label="Text"
			description="fieldTEXT" />
		<field
			name="format"
			type="list"
			default="rss"
			label="Format"
			description="fieldFEEDFORMAT">
			<option
				value="rss">RSS 2.0</option>
			<option
				value="atom">Atom 1.0</option>
		</field>
	</fields>
	<fields
		group="advanced">
		<field
			name="layout"
			type="modulelayout"
			label="JField_Alt_Layout_Label"
			description="JField_Alt_Module_Layout_Desc" />
		<field
			name="moduleclass_sfx"
			type="text"
			default=""
			label="MODULES_FIELD_MODULECLASS_SFX_LABEL"
			description="MODULES_FIELD_MODULECLASS_SFX_DESC" />
		<field
			name="cache"
			type="list"
			default="0"
			label="MODULES_FIELD_CACHING_LABEL"
			description="MODULES_FIELD_CACHING_DESC">
			<option
				value="0">No caching</option>
		</field>
	</fields>
</extension>
