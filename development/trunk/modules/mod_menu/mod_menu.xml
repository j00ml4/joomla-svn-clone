<?xml version="1.0" encoding="utf-8"?>
<install
	type="module"
	version="1.6.0">
	<name>Menu</name>
	<author>Joomla! Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>Copyright (C) 2005 - 2009 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.6.0</version>
	<description>DESCMENU</description>
	<files>
		<filename
			module="mod_menu">mod_menu.php</filename>
	</files>
	<fields>
		<field
			name="menutype"
			type="menu"
			default=""
			label="Menu Name"
			description="The name of the menu (default is mainmenu)" />

		<field
			name="startLevel"
			type="text"
			default="0"
			size="5"
			label="Start Level"
			description="fieldSTARTLEVEL" />
		<field
			name="endLevel"
			type="text"
			default="0"
			size="5"
			label="End Level"
			description="fieldSTOPLEVEL" />
		<field
			type="spacer" />
		<field
			name="showAllChildren"
			type="radio"
			default="0"
			label="Always show submenu items"
			description="fieldSHOWSUBMENUITEMS">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
		</field>
	</fields>
	<fields
		group="advanced">
		<field
			name="tag_id"
			type="text"
			default=""
			label="Menu Tag ID"
			description="fieldMENUTAGID" />
		<field
			name="class_sfx"
			type="text"
			default=""
			label="Menu Class Suffix"
			description="fieldMENUCLASSSUFFIX" />
		<field
			name="maxdepth"
			type="text"
			default="10"
			label="Maximum Menu Depth"
			description="fieldMENUMAXDEPTH" />
		<field
			name="window_open"
			type="text"
			default=""
			label="Target Position"
			description="fieldTARGETPOSITION" />
		<field
			name="moduleclass_sfx"
			type="text"
			default=""
			label="Module_Field_Moduleclass_sfx_Label"
			description="Module_Field_Moduleclass_sfx_Desc" />

		<field
			name="cache"
			type="list"
			default="0"
			label="Module_Field_Caching_Label"
			description="Module_Field_Caching_Desc">
			<option
				value="0">No caching</option>
		</field>
	</fields>
</install>
