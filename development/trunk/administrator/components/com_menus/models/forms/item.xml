<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fields>
		<field
			id="id"
			name="id"
			type="hidden"
			default="0"
			filter="int"
			required="true"
			readonly="true"/>

		<field
			id="title"
			name="title"
			type="text"
			label="JField_Title_Label"
			description="Menus_Item_Title_Desc"
			class="inputbox validate required"
			size="40"
			required="true"/>

		<field
			id="alias"
			name="alias"
			type="alias"
			label="JField_Alias_Label"
			description="Menus_Item_Alias_Desc"
			default=""
			class="inputbox"
			size="40"/>

		<field
			id="link"
			name="link"
			type="link"
			label="Menus_Item_Link_Label"
			description="Menus_Item_Link_Desc"
			default=""
			class="inputbox"
			size="40"/>

		<field
			id="menutype"
			name="menutype"
			type="menus"
			label="Menus_Item_MenuType_Label"
			description="Menus_Item_MenuType_Desc"
			default=""
			class="inputbox"
			size="1"/>

		<field
			id="type"
			name="type"
			type="menutype"
			label="Menus_Item_Type_Label"
			description="Menus_Item_Type_Desc"
			default=""
			class="inputbox"
			size="40" />

		<field
			name="published"
			type="radio"
			id="published"
			class="inputbox"
			label="JField_Published_Label"
			description="JField_Published_Desc"
			default="1"
			filter="integer">
			<option
				value="0">JNo</option>
			<option
				value="1">JYes</option>
			<option
				value="-2">JOption_Trash</option>
		</field>

		<field
			id="parent_id"
			name="parent_id"
			type="menuparent"
			label="Menus_Item_Parent_Label"
			description="Menus_Item_Parent_Desc"
			default=""
			filter="int"
			class="inputbox"
			size="1"/>

		<field
			id="component_id"
			name="component_id"
			type="text"
			label="Menus_Item_Component_Label"
			description="Menus_Item_Component_Desc"
			default=""
			filter="int"
			class="inputbox"/>

		<field
			id="ordering"
			name="ordering"
			type="text"
			label="JField_Ordering_Label"
			description="JField_Ordering_Desc"
			default=""
			filter="int"
			class="inputbox"/>

		<field
			id="browserNav"
			name="browserNav"
			type="text"
			label="Menus_Item_BrowserNav_Label"
			description="Menus_Item_BrowserNav_Desc"
			default=""
			filter="int"
			class="inputbox"/>

		<field
			name="access"
			type="accesslevels"
			id="access"
			class="inputbox"
			label="JField_Access_Label"
			description="JField_Access_Desc"
			default="1"
			filter="integer"/>


		<field
			id="template_id"
			name="template_id"
			type="text"
			label="Menus_Item_Template_Label"
			description="Menus_Item_Template_Desc"
			default=""
			filter="int"
			class="inputbox"/>

		<field
			id="params"
			name="params"
			type="textarea"
			label="JCommon_params_Label"
			description="Menus_Item_Params_Desc"
			default=""
			rows="3"
			cols="60"
			class="inputbox"/>

		<field
			id="home"
			name="home"
			type="radio"
			label="Menus_Item_Home_Label"
			description="Menus_Item_Home_Desc"
			default="0"
			class="inputbox"
			filter="integer">
			<option
				value="0">No</option>
			<option
				value="1">Yes</option>
		</field>

		<field
			name="path"
			type="hidden"
			filter="unset"/>

		<field
			name="level"
			type="hidden"
			filter="unset"/>

		<field
			name="checked_out"
			type="hidden"
			filter="unset"/>

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"/>

		<field
			name="lft"
			type="hidden"
			filter="unset"/>

		<field
			name="rgt"
			type="hidden"
			filter="unset"/>
	</fields>

	<fields
		group="params"
		array="true"
		label="Menu_System_Options">

		<field
			id="menu-anchor_title"
			name="menu-anchor_title"
			type="text"
			label="Menus_Item_Anchor_Title_Label"
			description="Menus_item_Anchor_Title_Desc"
			default=""/>

		<field
			id="menu-anchor_css"
			name="menu-anchor_css"
			type="text"
			label="Menus_Item_Anchor_CSS_Label"
			description="Menus_item_Anchor_CSS_Desc"
			default=""/>

		<field
			id="page_title"
			name="page_title"
			type="text"
			label="Menus_Item_Page_Title_Label"
			description="Menus_Item_Page_Title_Desc"
			default=""/>

		<field
			id="show_page_title"
			name="show_page_title"
			type="radio"
			label="Menus_Item_Show_Page_Title_Label"
			description="Menus_Item_Show_Page_Title_Desc"
			default="1"
			filter="integer">
			<option
				value="0">No</option>
			<option
				value="1">Yes</option>
		</field>

		<field
			id="pageclass_sfx"
			name="pageclass_sfx"
			type="text"
			label="Menus_Item_Page_Class_Label"
			description="Menus_Item_Page_Class_Desc"
			default=""/>

		<field
			id="menu_image"
			name="menu_image"
			type="text"
			label="Menus_Item_Menu_Image_Label"
			description="Menus_Item_Menu_Image_Desc"
			default=""/>

		<field
			id="secure"
			name="secure"
			type="radio"
			label="Menus_Item_Secure_Label"
			description="Menus_Item_Secure_Desc"
			default="1"
			filter="integer">
			<option
				value="-1">Off</option>
			<option
				value="0">Ignore</option>
			<option
				value="1">On</option>
		</field>

		<field
			id="menu-meta_description"
			name="menu-meta_description"
			type="textarea"
			label="JField_Meta_Description_Label"
			description="Menus_Item_Meta_Description_Desc"
			default=""
			rows="3"
			cols="40"/>

		<field
			id="menu-meta_keywords"
			name="menu-meta_keywords"
			type="textarea"
			label="JField_Meta_Keywords_Label"
			description="Menus_Item_Meta_Keywords_Desc"
			default=""
			rows="3"
			cols="40"/>


	</fields>

</form>