<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fields>
		<field
			id="id"
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"
		/>

		<field
			id="catid"
			name="catid"
			type="Category"
			class="inputbox"
			default=""
			label="Weblinks_Category"
			description="Weblinks_Category_Desc"
			required="true"
		/>

		<field
			id="sid"
			name="catid"
			type="Section"
			class="inputbox"
			default=""
			label="Weblinks_Section"
			description="Weblinks_Section_Desc"
			required="true"
		/>

		<field
			id="title"
			name="title"
			type="text"
			class="inputbox"
			default=""
			size="40"
			label="Weblinks_Title"
			description="Weblinks_Title_Desc"
		/>

		<field
			id="alias"
			name="alias"
			type="text"
			class="inputbox"
			default=""
			size="40"
			label="Weblinks_Alias"
			description="Weblinks_Alias_Desc"
		/>

		<field
			id="url"
			name="url"
			type="text"
			class="inputbox"
			default=""
			size="40"
			label="Weblinks_Url"
			description="Weblinks_Url_Desc"
		/>

		<field
			id="description"
			name="description"
			type="editor"
			class="inputbox"
			default=""
			label="Weblinks_Description"
			description="Weblinks_Description_Desc"
		/>

		<field
			id="date"
			name="date"
			type="Date"
			class="inputbox"
			default=""
			label="Weblinks_Date"
			description="Weblinks_Date_Desc"
			filter="safehtml"
		/>

		<field
			id="hits"
			name="hits"
			type="Text"
			class="inputbox"
			default=""
			size="6"
			label="Weblinks_Date"
			description="Weblinks_Date_Desc"
			readonly="true"
			filter="unset"
		/>

		<field
			id="state"
			name="state"
			type="radio"
			class="inputbox"
			default=""
			label="Weblinks_Description"
			description="Weblinks_Description_Desc"
		>
			<option value="0">JNo</option>
			<option value="1">JYes</option>
			<option value="-1">Weblinks_Reported</option>
		</field>

		<field
			id="checked_out"
			name="checked_out"
			type="Text"
			class="inputbox"
			default=""
			size="6"
			label="Weblinks_Checkedout"
			description="Weblinks_Checkedout_Desc"
			readonly="true"
			filter="unset"
		/>

		<field
			id="checked_out_time"
			name="checked_out_time"
			type="Text"
			class="inputbox"
			default=""
			size="6"
			label="Weblinks_Checkedout_Time"
			description="Weblinks_Checkedout_Time_Desc"
			readonly="true"
			filter="unset"
		/>
		
		<field
			id="ordering"
			name="ordering"
			type="Order"
			class="inputbox"
			default=""
			label="Weblinks_Ordering"
			description="Weblinks_Ordering_Desc"
		/>

		<field
			id="archived"
			name="archived"
			type="radio"
			class="inputbox"
			default=""
			label="Weblinks_Archived"
			description="Weblinks_Archived_Desc"
		>
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>

		<field
			id="approved"
			name="approved"
			type="radio"
			class="inputbox"
			default=""
			label="Weblinks_Approved"
			description="Weblinks_Approved_Desc"
		>
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>

		<field
			id="params"
			name="ordering"
			type="Order"
			class="inputbox"
			default=""
			label="Weblinks_Ordering"
			description="Weblinks_Ordering_Desc"
		/>

	</fields>
	
	<fields
				group="params"
				array="true"
				label="Weblinks_Options">
		
		<field
				id="target"
				name="target"
				type="List"
				default="0"
				label="Weblinks_Target"
				description="Weblinks_Target_Desc">
			<option value="0">JBrowserTarget_Parent</option>
			<option value="1">JBrowserTarget_New</option>
			<option value="2">JBrowserTarget_Popup</option>
			<option value="3">JBrowserTarget_Modal</option>
		</field>
	</fields>
</form>