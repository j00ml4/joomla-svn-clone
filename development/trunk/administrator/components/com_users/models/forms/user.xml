<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fields>
		<field
			name="name"
			type="text"
			id="name"
			size="30"
			default=""
			required="true"
			class="inputbox required"
			label="Users_User_Name"
			description="Users_User_Name"/>
		<field
			name="username"
			type="text"
			id="username"
			size="30"
			default=""
			required="true"
			class="inputbox required"
			label="Users_Users_UserName"
			description="Users_Users_UserName_Desc"/>
		<field
			name="password"
			type="password"
			id="password"
			size="30"
			default=""
			filter="raw"
			class="inputbox"
			label="Users_User_Password"
			description="Users_User_Password_Desc"
			autocomplete="off"/>
		<field
			name="password2"
			type="password"
			id="password2"
			size="30"
			default=""
			filter="raw"
			class="inputbox"
			label="Users_User_Password2"
			description="Users_User_Password2_Desc"
			autocomplete="off"/>
		<field
			name="email"
			type="text"
			id="email"
			size="30"
			default=""
			required="true"
			validate="email"
			class="inputbox required validate-email"
			label="Users_User_Email"
			description="Users_User_Email_Desc"/>
	</fields>

	<fields
		group="params"
		array="true"
		label="User_Profile">

		<field
			name="admin_language"
			type="languages"
			client="administrator"
			default=""
			label="Users_Option_Backend_Language"
			description="Users_Option_Backend_Language_Desc">
			<option
				value="">JOption_Use_Default</option>
		</field>
		<field
			name="language"
			type="languages"
			client="site"
			default=""
			label="Users_Option_Frontend_Language"
			description="Users_Option_Frontend_Language_Desc">
			<option
				value="">JOption_Use_Default</option>
		</field>
		<field
			name="editor"
			type="editors"
			default=""
			label="Users_Option_Editor"
			description="Users_Option_Editor_Desc">
			<option
				value="">JOption_Use_Default</option>
		</field>
		<field
			name="helpsite"
			type="helpsites"
			default=""
			label="Users_Option_Helpsite"
			description="Users_Option_Helpsite_Desc">
			<option
				value="">JOption_Use_Default</option>
		</field>
		<field
			name="timezone"
			type="timezones"
			default=""
			label="Users_Option_Timezone"
			description="Users_Option_Timezone_Desc">
			<option
				value="">JOption_Use_Default</option>
		</field>
	</fields>
</form>