<?xml version="1.0" encoding="utf-8"?>
<install version="1.6" type="plugin" group="user">
	<name>plg_user_contactcreator</name>
	<author>Joomla! Project</author>
	<creationDate>August 2009</creationDate>
	<copyright>(C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.6.0</version>
	<description>PLG_CONTACTCREATOR_XML_DESCRIPTION</description>
	<files>
		<filename plugin="contactcreator">contactcreator.php</filename>
	</files>
	<languages>
		<language tag="en-GB">administrator/language/en-GB/en-GB.plg_user_contactcreator.ini
		</language>
	</languages>

	<config>
		<fields name="params">

			<fieldset name="basic" label="JPLUGIN_BASIC_FIELDSET_LABEL">
				<field name="autowebpage" type="text"
					description="PLG_CONTACTCREATOR_FIELD_AUTOMATIC_CONTACT_DESC"
					label="PLG_CONTACTCREATOR_FIELD_AUTOMATIC_CONTACT_LABEL"
				/>

				<field name="category" type="category"
					description="PLG_CONTACTCREATOR_FIELD_CATEGORY_DESC"
					extension="com_contact"
					label="PLG_CONTACTCREATOR_FIELD_CATEGORY_LABEL"
				/>

				<field name="autopublish" type="radio"
					default="0"
					description="PLG_CONTACTCREATOR_FIELD_AUTOPUBLISH_DESC"
					label="PLG_CONTACTCREATOR_FIELD_AUTOPUBLISH_LABEL"
				>
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>

		</fields>
	</config>
</install>
